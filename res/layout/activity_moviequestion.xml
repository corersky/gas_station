<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/main_title"/>
    <RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/movie_question_bg">
		        
		       	<LinearLayout 
		        	android:background="#c54738"
		        	android:orientation="vertical"
				    android:layout_width="fill_parent"    
				    android:layout_height="@dimen/movie_question_total_height" >
		     		<TextView 
		         		android:id="@+id/surface_title"
		         		android:textSize="18sp"
		         		android:gravity="center"
		         		android:textStyle="bold"
		         		android:textColor="#dbd418"
		     			android:layout_width="fill_parent"    
		     			android:layout_height="40dip"/>
		     		<RelativeLayout             
		      			android:layout_width="fill_parent"    
		      			android:layout_height="wrap_content">
		         		<SurfaceView
		       				android:id="@+id/surface" 
		       				android:layout_margin="5dip"
		       				android:layout_width="fill_parent"    
		       				android:layout_height="@dimen/movie_question_height" >
		   				</SurfaceView>
		   				<RelativeLayout 
		   				    android:id="@+id/surface_conver"
		   				    android:background="#c54738"
		   				    android:visibility="invisible"
		       				android:layout_width="fill_parent"    
		       				android:layout_height="@dimen/movie_question_height">
		   				    <ProgressBar
		   				        android:layout_centerInParent="true"
      							android:layout_width="wrap_content" 
      							android:layout_height="wrap_content"
      							style="?android:attr/progressBarStyleLarge"/>
		   				</RelativeLayout>
		   				<ImageView 
		       				android:id="@+id/media_video_start"
		       				android:src="@drawable/media_video_start"
		       				android:visibility="gone"
		       				android:layout_centerInParent="true"
		      				android:layout_width="wrap_content"
		      				android:layout_height="wrap_content"/>
		     		</RelativeLayout>	            
		    	</LinearLayout>            
			    <include 
			        android:visibility="gone"
			        android:layout_centerInParent="true"
			        layout="@layout/mediacontroller"/>
		    </RelativeLayout>
		    <RelativeLayout 
		        android:background="#78b82e"
		       	android:layout_width="fill_parent"
		       	android:layout_height="fill_parent">
		        <RelativeLayout 
		            android:background="@drawable/movie_question_answer_bg"
		            android:layout_margin="10dip"
		       		android:layout_width="fill_parent"
		       		android:layout_height="fill_parent">
		       		<TextView 
		       		    android:visibility="invisible"
		                android:text="下一题"
		                android:layout_alignParentBottom="true"
		                android:layout_centerHorizontal="true"
		                android:textColor="@android:color/white"
		                android:textSize="16sp"
		                android:paddingLeft="55dip"
		                android:paddingRight="55dip"
		                android:paddingTop="7dip"
		                android:paddingBottom="7dip"
		       			android:layout_width="wrap_content"
		       			android:layout_height="wrap_content"
		                android:background="@drawable/movie_question_answer_next"
		                android:id="@+id/movie_question_answer_next"/>
		       		<LinearLayout 
		       		    android:layout_above="@id/movie_question_answer_next"
		       		    android:layout_marginBottom="10dip"
		       		    android:orientation="horizontal"
		       			android:layout_width="fill_parent"
		       			android:layout_height="fill_parent">
		       		    <TextView 
			       		    android:id="@+id/movie_question_answer_que"
			       		    android:layout_marginLeft="5dip"
			       		    android:layout_marginTop="5dip"
			       		    android:layout_weight="3"
			       		    android:textSize="14sp"
			       		    android:textColor="#b03c2d"
			       		    android:background="@drawable/movie_question_question_bg"
			       			android:layout_width="fill_parent"
			       			android:layout_height="fill_parent"/>
		       		    <ScrollView 
		       		        android:layout_height="match_parent"
		       		        android:layout_width="fill_parent"
			       		    android:layout_marginLeft="5dip"
			       		    android:layout_marginTop="5dip"
			       		    android:gravity="center_vertical"
			       		    android:layout_weight="4">
		       		        <LinearLayout 
				       		    android:id="@+id/movie_question_answer_layout"
				       		    android:orientation="vertical"
				       			android:layout_width="fill_parent"
				       			android:layout_height="fill_parent">
				       		</LinearLayout>
		       		    </ScrollView>
			       		
		       		</LinearLayout>
		        </RelativeLayout>
		    </RelativeLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/movie_question_start_layout"
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
	        <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/movie_question_bg">
		        <ImageView 
		            android:id="@+id/movie_question_start"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:paddingLeft="30dip"
		        	android:paddingRight="30dip"
		        	android:layout_centerHorizontal="true"
		        	android:layout_marginTop="@dimen/movie_question_start_height"
		            android:src="@drawable/movie_question_start"
		            android:background="@drawable/movie_question_start_bg"/>
		    </RelativeLayout>
			<RelativeLayout 
		        android:background="#78b82e"
		       	android:layout_width="fill_parent"
		       	android:layout_height="fill_parent">
			    <ScrollView 
		            android:background="@drawable/movie_question_answer_bg"
		            android:layout_margin="10dip"
		            android:scrollbars="none"
		       		android:layout_width="fill_parent"
		       		android:layout_height="fill_parent">
			        <TextView 
				        android:id="@+id/movie_question_desp"
			            android:textColor="@android:color/black"
			            android:padding="10dip"
			       		android:layout_width="fill_parent"
			       		android:layout_height="fill_parent" />
			    </ScrollView>
			        
			</RelativeLayout>
	    </LinearLayout>
	    <RelativeLayout 
	        android:id="@+id/movie_question_award_layout"
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent">
	        <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/movie_question_bg">
	            
	        </RelativeLayout>
	        <LinearLayout 
	            android:orientation="vertical"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
	            <ImageView 
	                android:src="@drawable/movie_question_line"	 
	                android:layout_marginTop="110dip"               
		        	android:layout_width="match_parent"
		        	android:layout_height="wrap_content"/>
	            <LinearLayout 
		            android:orientation="vertical"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:background="#78b82e">
	                <RelativeLayout 
	                    android:layout_gravity="center_horizontal"
	                    android:layout_marginTop="@dimen/movie_question_margin"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
	                    android:background="@drawable/movie_question_award_bg">
	                    <TextView 
	                        android:id="@+id/movie_question_award_title"
	                        android:textColor="#f3df12"	   
	                        android:textSize="@dimen/movie_question_award_text_big_size"                     
			        		android:layout_width="wrap_content"
			        		android:layout_height="wrap_content"
			        		android:layout_marginTop="@dimen/movie_question_award_margin1"
			        		android:paddingRight="50dip"
			        		android:layout_centerHorizontal="true"/>
	                    <TextView 
	                        android:id="@+id/movie_question_award_right_num"
	                        android:textColor="#f3df12"	
	                        android:textSize="@dimen/movie_question_award_text_size"                         
			        		android:layout_width="wrap_content"
			        		android:layout_height="wrap_content"
			        		android:layout_marginTop="@dimen/movie_question_award_margin2"
			        		android:paddingRight="50dip"
			        		android:layout_centerHorizontal="true"/>
	                    <TextView 
	                        android:id="@+id/movie_question_award_coin"
	                        android:textColor="#f3df12"	   
	                        android:textSize="@dimen/movie_question_award_text_size"                     
			        		android:layout_width="wrap_content"
			        		android:layout_height="wrap_content"
			        		android:layout_marginTop="@dimen/movie_question_award_margin3"
			        		android:paddingRight="50dip"
			        		android:layout_centerHorizontal="true"/>
	                    <TextView 
	                        android:id="@+id/movie_question_award_coin_watch"
	                        android:text="查看金币->"
	                        android:textColor="#375e02"	   
	                        android:textSize="14sp"                     
			        		android:layout_width="wrap_content"
			        		android:layout_height="wrap_content"
			        		android:layout_marginTop="@dimen/movie_question_award_margin4"
			        		android:paddingTop="10dip"
			        		android:paddingBottom="10dip"
			        		android:paddingRight="70dip"
			        		android:layout_centerHorizontal="true"/>
	                </RelativeLayout>	                
		            <ImageView 
		                android:src="@drawable/movie_question_line2"	 
		                android:layout_marginTop="@dimen/movie_question_margin"               
			        	android:layout_width="match_parent"
			        	android:layout_height="wrap_content"/>
		            <TextView 
		                android:layout_width="match_parent"
			        	android:layout_height="wrap_content"
			        	android:text="选择分享渠道"
			        	android:textSize="18sp"
			        	android:gravity="center"
			        	android:layout_margin="@dimen/movie_question_margin"
			        	android:textColor="#3d670c"/>
		            <LinearLayout 
				    	android:layout_width="match_parent"
				    	android:layout_height="wrap_content"
				    	android:layout_marginLeft="20dip"
				    	android:layout_marginRight="20dip"
				    	android:orientation="horizontal">
					    <ImageView 
					        android:id="@+id/qqkj_logo_share"
					   	 	android:layout_width="@dimen/movie_question_share_height"
					    	android:layout_height="@dimen/movie_question_share_height"
					    	android:layout_weight="1"
					        android:src="@drawable/qqkj_logo"/>
						<ImageView 
					        android:id="@+id/weixin_pengyou_share"
					   	 	android:layout_width="@dimen/movie_question_share_height"
					    	android:layout_height="@dimen/movie_question_share_height"
					    	android:layout_weight="1"
					        android:src="@drawable/weixin_pengyou_logo"/>
						<ImageView 
					        android:id="@+id/yixin_pengyou_share"
					   	 	android:layout_width="@dimen/movie_question_share_height"
					    	android:layout_height="@dimen/movie_question_share_height"
					    	android:layout_weight="1"
					        android:src="@drawable/yixin_pengyou_logo"/>
						<ImageView 
					        android:id="@+id/sinaweibo_logo_share"
					   	 	android:layout_width="@dimen/movie_question_share_height"
					    	android:layout_height="@dimen/movie_question_share_height"
					    	android:layout_weight="1"
					        android:src="@drawable/sinaweibo_logo"/>
					</LinearLayout>
	            </LinearLayout>
	        </LinearLayout>
	    </RelativeLayout>
    </RelativeLayout>    
</LinearLayout>