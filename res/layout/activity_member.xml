<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/main_title"/>
    <RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
        <LinearLayout
	        android:orientation="vertical" 
	    	android:layout_width="match_parent"
	    	android:layout_height="match_parent">
	    	<LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="#f1f1f1">
		        <TextView 
		            android:id="@+id/member_left_tab"
		            android:layout_marginLeft="10dip"
		            android:layout_marginRight="10dip"
		            android:layout_marginTop="5dip"
		            android:layout_marginBottom="5dip"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:padding="10dip"
		            android:textSize="16sp"
		            android:drawableLeft="@drawable/member_left_on"
		            android:background="@drawable/member_title_on"
		            android:layout_width="match_parent"
		            android:layout_height="40dip"
		            android:textColor="@color/member_title_choice_color"
		            android:text="会员抢购"/>
		        <TextView 
		            android:id="@+id/member_right_tab"
		            android:layout_marginLeft="10dip"
		            android:layout_marginRight="10dip"
		            android:layout_marginTop="5dip"
		            android:layout_marginBottom="5dip"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:padding="10dip"
		            android:textSize="16sp"
		            android:drawableLeft="@drawable/member_right_off"
		            android:background="@drawable/member_title_off"
		            android:layout_width="match_parent"
		            android:layout_height="40dip"
		            android:textColor="@color/member_title_normal_color"
		            android:text="已抢商品"/>
		    </LinearLayout>
		    <View 
		        android:background="@drawable/member_line"
		        android:layout_width="match_parent"
		        android:layout_height="2dip"/>
		    
	    	<TextView 
	            android:id="@+id/member_level_desp"
	            android:visibility="gone"
	    	    android:padding="5dip"
	    	    android:gravity="center"
		        android:background="#f1f1f1"
	    		android:layout_width="match_parent"
	    		android:layout_height="wrap_content"/>
		    <RelativeLayout         
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:background="#f8f8f8">
		        <RelativeLayout 
			        android:id="@+id/member_left_layout"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent">
			        <LinearLayout 
			            android:id="@+id/member_day_start_layout"
			            android:orientation="vertical"
				        android:visibility="gone"
			        	android:layout_width="match_parent"
			        	android:layout_height="wrap_content"
			       		android:background="@drawable/member_bg">            
				        <ListView
					        android:id="@+id/member_left_listview"
					        android:layout_width="match_parent"
					        android:layout_height="match_parent"
					        android:divider="@android:color/darker_gray"
					        android:dividerHeight="0.5dip"
					        android:fadingEdge="none"
					        android:cacheColorHint="#00000000"/>
			        </LinearLayout>
			        <LinearLayout 
			            android:id="@+id/member_day_notstart_layout"
				        android:visibility="gone"
			            android:orientation="vertical"
			        	android:layout_width="match_parent"
			        	android:layout_height="match_parent"
			            android:layout_margin="10dip">
			            <LinearLayout 
			                android:orientation="vertical"
			        		android:layout_width="match_parent"
			        		android:layout_height="wrap_content"
			        		android:background="@drawable/member_bg">
			                <TextView 
			                    android:text="下期会员日  还剩"
			                    android:textColor="#9ea7b3"
			                    android:layout_marginTop="5dip"
			                    android:layout_marginLeft="20dip"
			            		android:textSize="12sp"
			        			android:layout_width="wrap_content"
			        			android:layout_height="wrap_content"/>
			                <LinearLayout 
			                    android:orientation="horizontal"
			                    android:layout_marginLeft="10dip"
			                    android:layout_marginRight="10dip"
			                    android:layout_marginTop="5dip"
			        			android:layout_width="match_parent"
			        			android:layout_height="wrap_content">
			                    <TextView 
			                        android:id="@+id/member_day"
			                        android:layout_weight="1"
			                        android:textSize="36sp"
			                        android:text="00"
			                        android:gravity="center"
			                        android:textColor="#09b311"
			        				android:layout_width="match_parent"
			        				android:layout_height="wrap_content"/>
			                    <TextView 
			                        android:textSize="36sp"
			                        android:text=":"
			                        android:gravity="center"
			                        android:textColor="#09b311"
			        				android:layout_width="wrap_content"
			        				android:layout_height="wrap_content"/>
			                    <TextView 
			                        android:id="@+id/member_hour"
			                        android:layout_weight="1"
			                        android:textSize="36sp"
			                        android:text="00"
			                        android:gravity="center"
			                        android:textColor="#09b311"
			        				android:layout_width="match_parent"
			        				android:layout_height="wrap_content"/>
			                    <TextView 
			                        android:textSize="36sp"
			                        android:text=":"
			                        android:gravity="center"
			                        android:textColor="#09b311"
			        				android:layout_width="wrap_content"
			        				android:layout_height="wrap_content"/>
			                    <TextView 
			                        android:id="@+id/member_min"
			                        android:layout_weight="1"
			                        android:textSize="36sp"
			                        android:text="00"
			                        android:gravity="center"
			                        android:textColor="#09b311"
			        				android:layout_width="match_parent"
			        				android:layout_height="wrap_content"/>
			                </LinearLayout>
			                <LinearLayout 
			                    android:orientation="horizontal"
			                    android:layout_marginLeft="10dip"
			                    android:layout_marginRight="10dip"
			        			android:layout_width="match_parent"
			        			android:layout_height="wrap_content">
			                    <TextView 
			                        android:layout_weight="1"
			                        android:textSize="14sp"
			                        android:text="天"
			                        android:gravity="center"
			                        android:textColor="#9ea7b3"
			        				android:layout_width="match_parent"
			        				android:layout_height="wrap_content"/>
			                    <TextView 
			                        android:layout_weight="1"
			                        android:textSize="14sp"
			                        android:text="小时"
			                        android:gravity="center"
			                        android:textColor="#9ea7b3"
			        				android:layout_width="match_parent"
			        				android:layout_height="wrap_content"/>
			                    <TextView 
			                        android:layout_weight="1"
			                        android:textSize="14sp"
			                        android:text="分钟"
			                        android:gravity="center"
			                        android:textColor="#9ea7b3"
			        				android:layout_width="match_parent"
			        				android:layout_height="wrap_content"/>
			                </LinearLayout>
			            </LinearLayout>
			            
			            <LinearLayout 
			                android:orientation="vertical"
			        		android:layout_width="match_parent"
			        		android:layout_height="match_parent"
			        		android:layout_marginTop="5dip"
			        		android:background="@drawable/member_bg">
			                <TextView 
			                    android:text="下期会员日，更多精彩值得期待"
			                    android:layout_margin="3dip"
			                    android:background="#09b311"
			                    android:textColor="@android:color/white"
			                    android:padding="5dip"
			        			android:layout_width="match_parent"
			        			android:layout_height="wrap_content"/>
			                <ListView 
			                    android:id="@+id/member_next_listview"
			        			android:layout_width="match_parent"
			        			android:layout_height="match_parent"
			        			android:divider="@android:color/darker_gray"
					        	android:dividerHeight="0.5dip"
				        		android:fadingEdge="none"
				        		android:cacheColorHint="#00000000">
			                    
			                </ListView>
			            </LinearLayout>
			        </LinearLayout>
				    <LinearLayout 
				        android:id="@+id/member_day_no_layout"
				        android:orientation="vertical"
				        android:gravity="center"
				        android:background="@android:color/white"
				    	android:layout_width="match_parent"
				    	android:layout_height="match_parent">
				        <ImageView  
				   			android:src="@drawable/member_no_pic"
				     		android:layout_width="wrap_content"
				     		android:layout_height="wrap_content"/>
				    </LinearLayout>
			    </RelativeLayout>	    
		        <ListView
			        android:id="@+id/member_right_listview"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
		            android:layout_marginTop="10dip"
			        android:divider="@android:color/darker_gray"
			        android:dividerHeight="0.5dip"
			        android:fadingEdge="none"
				    android:visibility="gone"
			        android:cacheColorHint="#00000000"/>
		    </RelativeLayout>
	    </LinearLayout>
	    <include 
	        android:id="@+id/member_selecttype"
	        android:visibility="gone"
	        layout="@layout/activity_selecttype">
	        
	    </include>"
    </RelativeLayout>
    
</LinearLayout>
