<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/main_title"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_margin="5dip"
    	android:gravity="center_horizontal">
		<ImageView 
		    android:id="@+id/about_top"
		    android:src="@drawable/about_top"
		    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>		
		<ImageView 
		    android:id="@+id/about_bottom"
		    android:src="@drawable/about_bottom"
		    android:layout_alignParentBottom="true"
		    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
		<LinearLayout 
		    android:layout_below="@id/about_top"
		    android:layout_above="@id/about_bottom"
		    android:background="@drawable/about_middle"
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
    		android:layout_height="fill_parent">
		    <TextView 
		        android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:textSize="20sp"
    			android:textColor="#979797"
    			android:layout_marginTop="20dip"
    			android:layout_marginLeft="20dip"
    			android:layout_marginRight="20dip"
		        android:text="版本信息：V7.9.44"/>
		    <LinearLayout 
		        android:layout_width="fill_parent"
    			android:layout_height="1dip"
    			android:layout_margin="10dip"
    			android:background="#c9c9c9"/>
		    <TextView 
		        android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:textColor="#979797"
    			android:layout_marginTop="10dip"
    			android:layout_marginLeft="20dip"
    			android:layout_marginRight="20dip"
    			android:textSize="20sp"
		        android:text="版本日期：2014-12-31"/>
		    <LinearLayout 
		        android:layout_width="fill_parent"
    			android:layout_height="1dip"
    			android:layout_margin="10dip"
    			android:background="#c9c9c9"/>
		    <LinearLayout 
		        android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:gravity="center_horizontal"
    			android:layout_marginTop="10dip"
				android:orientation="horizontal">
		        <TextView 
			        android:layout_width="wrap_content"
			        android:gravity="center"
	    			android:layout_height="50dip"
	    			android:background="@drawable/order_detail_bg"
	    			android:textColor="#979797"
	    			android:textSize="20sp"
	    			android:padding="13dip"
	    			android:id="@+id/check_update"
			        android:text="版本检测"/>
		    </LinearLayout>
		    
		</LinearLayout>		
	</RelativeLayout>
</LinearLayout>