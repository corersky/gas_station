<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >
    <include 
        layout="@layout/main_title"/>
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="150dip"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    android:layout_marginLeft="7dip"
	    android:layout_marginRight="7dip"
	    android:background="@android:color/white"  >
	    <TextView 
	        android:id="@+id/randomshareredenvelopes_desp"
	        android:text="用于流量分享:"
	        android:padding="5dip"
	        android:layout_centerVertical="true"
	        android:background="@android:color/transparent"
	        android:textSize="15sp"
            android:textColor="#777777"
            android:layout_marginLeft="20dip"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
	    <TextView 
	        android:id="@+id/randomshareredenvelopes_num"
	        android:layout_alignBottom="@id/randomshareredenvelopes_desp"
	        android:background="@android:color/transparent"
	        android:padding="5dip"
	        android:textSize="15sp"
	        android:layout_toRightOf="@id/randomshareredenvelopes_desp"
	        android:text="请输入派送流量值"
	    	android:layout_width="140dip"
	    	android:inputType="number"
	    	android:layout_height="wrap_content"/>
	    <TextView 
		    android:text="M"
	        android:textSize="11sp"
            android:textColor="#777777"
	        android:layout_toRightOf="@id/randomshareredenvelopes_num"
	        android:layout_alignBottom="@id/randomshareredenvelopes_num"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
	</RelativeLayout>
	<TextView 
	    android:text="随机分享"
	    android:padding="10dip"
	    android:id="@+id/randomshareredenvelopes_send"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    android:layout_marginLeft="7dip"
	    android:layout_marginRight="7dip"
	    android:background="@android:color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#124aa3"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>
	
</LinearLayout>
