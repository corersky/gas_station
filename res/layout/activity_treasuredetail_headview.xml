<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/treasure_detail_headview_add"
            android:background="#f5a61a"
            android:text="收益"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingRight="15dip"
            android:drawablePadding="5dip"
            android:textColor="#757575"
            android:textSize="18sp"
            android:drawableLeft="@drawable/add_treasure"
    		android:layout_width="80dip"
    		android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/treasure_detail_headview_min"
            android:text="兑换"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingRight="15dip"
            android:drawablePadding="5dip"
            android:layout_marginLeft="10dip"
            android:drawableLeft="@drawable/min_treasure"
            android:textSize="18sp"
            android:textColor="#757575"
    		android:layout_width="80dip"
    		android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
   		android:layout_width="match_parent"
   		android:layout_height="wrap_content">
        <LinearLayout 	   
            android:id="@+id/treasure_detail_headview_get_layout"
			android:orientation="vertical"
	   		android:layout_width="match_parent"
	   		android:layout_height="wrap_content">
		    <LinearLayout 
			    android:orientation="horizontal"
		        android:layout_marginLeft="8dip"
		        android:layout_marginRight="8dip"
		        android:layout_marginTop="5dip"
		   		android:layout_width="match_parent"
		   		android:layout_height="wrap_content">
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:background="#f5a61a"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			        <TextView 
			            android:text="总收益"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
		            	android:textSize="18sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			        <TextView 
			            android:id="@+id/treasure_detail_headview_total"
			            android:text="0"
			            android:paddingTop="15dip"
			            android:paddingRight="15dip"
			            android:layout_centerInParent="true"
			            android:textColor="#eaff00"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
			            android:textSize="17sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			    </RelativeLayout>
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:background="#f5a61a"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			        <TextView 
			            android:text="QQ"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
		            	android:textSize="18sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			        <TextView 
			             android:id="@+id/treasure_detail_headview_qq"
			            android:text="0"
			            android:paddingTop="15dip"
			            android:paddingRight="15dip"
			            android:layout_centerInParent="true"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
			            android:textSize="17sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			    </RelativeLayout>
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:background="#f5a61a"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			        <TextView 
			            android:text="微博"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
		            	android:textSize="18sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			        <TextView 
			            android:id="@+id/treasure_detail_headview_weibo"
			            android:text="0"
			            android:paddingTop="15dip"
			            android:paddingRight="15dip"
			            android:layout_centerInParent="true"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
			            android:textSize="17sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			    </RelativeLayout>
			</LinearLayout>
			<LinearLayout 
			    android:orientation="horizontal"
		        android:layout_marginLeft="8dip"
		        android:layout_marginRight="8dip"
		   		android:layout_width="match_parent"
		   		android:layout_height="wrap_content">
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:background="#f5a61a"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			        <TextView 
			            android:text="买流量"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
		            	android:textSize="18sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			        <TextView 
			            android:id="@+id/treasure_detail_headview_frombuy"
			            android:text="0"
			            android:paddingTop="15dip"
			            android:paddingRight="15dip"
			            android:layout_centerInParent="true"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
			            android:textSize="17sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			    </RelativeLayout>
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:background="#f5a61a"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			        <TextView 
			            android:text="好友赠送"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
		            	android:textSize="18sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			        <TextView 
			            android:id="@+id/treasure_detail_headview_fromsend"
			            android:text="0"
			            android:paddingTop="15dip"
			            android:paddingRight="15dip"
			            android:layout_centerInParent="true"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
			            android:textSize="17sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			    </RelativeLayout>
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:background="#f5a61a"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			        <TextView 
			            android:text="微信"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
		            	android:textSize="18sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			        <TextView 
			            android:id="@+id/treasure_detail_headview_weixin"
			            android:text="0"
			            android:paddingTop="15dip"
			            android:paddingRight="15dip"
			            android:layout_centerInParent="true"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
			            android:textSize="17sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			    </RelativeLayout>
			</LinearLayout>
			<LinearLayout 
			    android:orientation="horizontal"
		        android:layout_marginLeft="8dip"
		        android:layout_marginRight="8dip"
		   		android:layout_width="match_parent"
		   		android:layout_height="wrap_content">
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:background="#f5a61a"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			        <TextView 
			            android:text="易信"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
		            	android:textSize="18sp"
			            android:layout_marginTop="3dip"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			        <TextView 
			            android:id="@+id/treasure_detail_headview_yixin"
			            android:text="0"
			            android:paddingTop="15dip"
			            android:paddingRight="15dip"
			            android:layout_centerInParent="true"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
			            android:textSize="17sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			    </RelativeLayout>
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			    </RelativeLayout>
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			    </RelativeLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout 	  
            android:visibility="invisible" 
		    android:id="@+id/treasure_detail_headview_use_layout"
			android:orientation="vertical"
	   		android:layout_width="match_parent"
	   		android:layout_height="wrap_content">
		    <LinearLayout 
			    android:orientation="horizontal"
		        android:layout_marginLeft="8dip"
		        android:layout_marginRight="8dip"
		        android:layout_marginTop="5dip"
		   		android:layout_width="match_parent"
		   		android:layout_height="wrap_content">
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:background="#f5a61a"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			        <TextView 
			            android:text="总兑换"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
		            	android:textSize="18sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			        <TextView 
			            android:id="@+id/treasure_detail_headview_use_total"
			            android:text="0"
			            android:paddingTop="15dip"
			            android:paddingRight="15dip"
			            android:layout_centerInParent="true"
			            android:textColor="#eaff00"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
			            android:textSize="17sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			    </RelativeLayout>
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:background="#f5a61a"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			        <TextView 
			            android:text="兑换流量"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
		            	android:textSize="18sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			        <TextView 
			            android:id="@+id/treasure_detail_headview_use_flow"
			            android:text="0"
			            android:paddingTop="15dip"
			            android:paddingRight="15dip"
			            android:layout_centerInParent="true"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
			            android:textSize="17sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			    </RelativeLayout>
			    <RelativeLayout 
			   		android:layout_width="match_parent"
			   		android:layout_height="70dip"
			   		android:background="#f5a61a"
			   		android:layout_margin="2dip"
			   		android:layout_weight="1">
			        <TextView 
			            android:text="兑换话费"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
		            	android:textSize="18sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			        <TextView 
			            android:id="@+id/treasure_detail_headview_bill"
			            android:text="0"
			            android:paddingTop="15dip"
			            android:paddingRight="15dip"
			            android:layout_centerInParent="true"
			            android:textColor="@android:color/white"
			            android:layout_marginLeft="10dip"
			            android:layout_marginTop="3dip"
			            android:textSize="17sp"
		   				android:layout_width="wrap_content"
		   				android:layout_height="wrap_content"/>
			    </RelativeLayout>
			</LinearLayout>
		</LinearLayout>
    </RelativeLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@android:color/white"
	    android:layout_marginTop="10dip"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
	    android:layout_marginBottom="2dip"
	    android:orientation="horizontal" >
	    <TextView 
	        android:id="@+id/treasure_detail_adapter_time"
	        android:layout_weight="1"
	        android:textColor="#5b3a00"
	        android:gravity="center"
	        android:padding="5dip"
	        android:textSize="16sp"
	        android:text="时间"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"/>
		<TextView 
	        android:id="@+id/treasure_detail_adapter_from"
	        android:layout_weight="1"
	        android:textColor="#5b3a00"
	        android:gravity="center"
	        android:padding="5dip"
	        android:textSize="16sp"
	        android:text="来源"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"/>
		<TextView 
	        android:id="@+id/treasure_detail_adapter_num"
	        android:layout_weight="1"
	        android:textColor="#5b3a00"
	        android:gravity="center"
	        android:padding="5dip"
	        android:textSize="16sp"
	        android:text="数量"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"/>
	</LinearLayout>
	
</LinearLayout>
