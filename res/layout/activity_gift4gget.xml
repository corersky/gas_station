<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   	android:background="@drawable/double_bg" >
    <include 
        layout="@layout/main_title"/>
       <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center_horizontal"> 
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" 
		    android:gravity="center_horizontal"	    
	    	android:layout_marginTop="20dip"
	    	android:layout_marginLeft="15dip"
	    	android:layout_marginBottom="30dip"
		    android:background="@drawable/double_info_bg">
	        <RelativeLayout 
			    android:layout_width="fill_parent"
			   	android:layout_height="wrap_content"
			   	android:layout_marginTop="10dip">	   
			    <LinearLayout 
			        android:layout_width="wrap_content"
			   		android:layout_height="wrap_content"
			   		android:id="@+id/gift4g_operate_info"
			   		android:orientation="vertical">
			        <TextView 
				        android:text="您的副油箱"
				        android:textSize="18dip"
				        android:textStyle="bold"
				        android:layout_marginLeft="10dip"
				        android:layout_height="wrap_content"
				        android:layout_width="wrap_content"/>
			        <ImageView 
			            android:src="@drawable/double_2g"			            
				        android:layout_marginTop="5dip"
				        android:layout_marginLeft="10dip"
				        android:layout_height="wrap_content"
				        android:layout_width="wrap_content"/>
			        <TextView 
				        android:text="江苏省内流量"
				        android:textSize="15dip"
				        android:textColor="@android:color/darker_gray"
				        android:layout_marginLeft="10dip"
				        android:layout_marginTop="40dip"
				        android:layout_height="wrap_content"
				        android:layout_width="wrap_content"/>
			        <TextView 
				        android:text="当月使用"
				        android:textSize="15dip"
				        android:layout_marginTop="4dip"
				        android:textColor="@android:color/darker_gray"
				        android:layout_marginLeft="10dip"
				        android:layout_height="wrap_content"
				        android:layout_width="wrap_content"/>
			    </LinearLayout>    
			    <RelativeLayout 
			        android:layout_width="wrap_content"
			   		android:layout_height="160dip"
			   		android:gravity="right"
		   		    android:layout_marginLeft="35dip"
			   		android:layout_toRightOf="@id/gift4g_operate_info">
			        <ImageView 
			   		    android:layout_centerInParent="true"
			   		    android:id="@+id/gift4g_cylinder"
			        	android:src="@drawable/cylinder_small_00"
			        	android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"/>
			        <TextView 
			            android:id="@+id/gift4g_amount_desp"
			            android:layout_centerHorizontal="true"
			            android:textColor="@android:color/black"
			            android:textSize="11sp"
			            android:layout_marginTop="30dip"
			            android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"
			            android:text="@string/home_amount"/>
			        <TextView 
			            android:id="@+id/gift4g_amount_text"
			            android:layout_below="@id/gift4g_amount_desp"
			            android:layout_centerHorizontal="true"
			            android:textColor="@android:color/black"
			            android:textSize="11sp"
			            android:layout_marginTop="10dip"
			            android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"
			            android:text="@string/home_start"/>
			        <TextView 
			            android:id="@+id/gift4g_unused_text"
			            android:layout_alignParentBottom="true"
			            android:layout_centerHorizontal="true"
			            android:textColor="@android:color/black"
			            android:textSize="11sp"
			            android:paddingBottom="35dip"
			            android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"
			            android:text="@string/home_start"/>
			        <TextView 
			            android:id="@+id/gift4g_unused_desp"
			            android:layout_above="@id/gift4g_unused_text"
			            android:layout_centerHorizontal="true"
			            android:textColor="@android:color/black"
			            android:textSize="11sp"
			            android:layout_marginBottom="10dip"
			            android:layout_width="wrap_content"
			   			android:layout_height="wrap_content"
			            android:text="@string/home_unused"/>
			    </RelativeLayout>
			</RelativeLayout>
			<ImageView 			    
	            android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
			    android:src="@drawable/double_line"/>
			<LinearLayout 
		        android:layout_width="fill_parent"
		  		android:layout_height="wrap_content"
		  		android:orientation="horizontal"
		  		android:gravity="center"
		  		android:layout_marginTop="10dip"
			    android:background="@drawable/double_banzi_bg">
			    <TextView 
		            android:text="领取流量："
		            android:layout_width="wrap_content"
  					android:layout_height="wrap_content"
					android:layout_weight="0"/>
		        <EditText
					android:id="@+id/gift4g_operate_flow"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:inputType="number"
					android:background="@drawable/double_edittext_bg"
					android:padding="5dip"
					android:textSize="16sp"
					android:layout_weight="1"
					android:hint="请输入流量数值"
					android:layout_margin="10dip"/>
		        
		        <TextView 
		            android:text="M"
		            android:layout_weight="0"
		            android:layout_width="wrap_content"
  					android:layout_height="wrap_content"/>
		    </LinearLayout>	    
	    	<TextView 
		        android:id="@+id/gift4g_operate_ok"
			    android:gravity="center"
			    android:layout_marginTop="20dip"
			    android:layout_marginLeft="30dip"
			    android:layout_marginRight="30dip"
			    android:layout_width="fill_parent" 
		   	    android:layout_height="wrap_content"
		   	    android:text="提    交"
		   	    android:textSize="16sp"
		   	    android:textColor="@android:color/white"
		   	    android:background="@drawable/jiayou_wantjiayou"/>
		    
	    </LinearLayout>	    
	</RelativeLayout>
</LinearLayout>
