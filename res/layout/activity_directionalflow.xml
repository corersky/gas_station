<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/market_bg">
    <include 
        layout="@layout/main_title"/>
    <ListView 
        android:id="@+id/direc_flow_list"
        android:layout_weight="1"
        android:listSelector="#00000000"
        android:fadingEdge="none"
        android:divider="#ffffff"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
        
    </ListView>
	<RelativeLayout 
	    android:orientation="horizontal"
	    android:layout_margin="5dip"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<TextView 
    	    android:id="@+id/direc_buy_money_tip"
	        android:gravity="center"
	        android:text="合计："
	        android:textColor="@android:color/black"
	        android:textSize="16sp"
	        android:layout_centerVertical="true"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    	<TextView 
    	    android:layout_toRightOf="@id/direc_buy_money_tip"
    	    android:id="@+id/direc_buy_money_tip2"
	        android:gravity="center"
	        android:text="¥"
	        android:textColor="#cc0000"
	        android:textSize="16sp"
	        android:layout_centerVertical="true"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    	<TextView 
    	    android:layout_toRightOf="@id/direc_buy_money_tip2"
	        android:id="@+id/direc_buy_money"
	        android:gravity="center"
	        android:textColor="@android:color/black"
	        android:textSize="16sp"
	        android:layout_centerVertical="true"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
	    <TextView 
	        android:id="@+id/direc_buy_button"
	        android:gravity="center"
	        android:layout_alignParentRight="true"
	        android:textColor="@android:color/white"
	        android:text="付  款"
	        android:drawableLeft="@drawable/direc_buy_car"
	        android:background="@drawable/direc_buy_button"
        	android:layout_width="120dip"
    		android:layout_height="wrap_content"/>
	</RelativeLayout>
</LinearLayout>
