<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/bbscomments_header_layout"
        android:visibility="gone"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
		android:layout_weight="1" 
		android:layout_marginTop="3dip"
	    android:background="#f7f7f7">
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
	        <RelativeLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="5"
		        android:gravity="center">
		        <ImageView 
		            android:id="@+id/bbscomments_head_face"
		            android:layout_width="45dip"
		            android:layout_height="45dip"
		            android:src="@drawable/portrait_normal"/>
		        <TextView 
		            android:layout_below="@id/bbscomments_head_face"
		            android:id="@+id/bbscomments_head_phonenum"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:singleLine="true"
		            android:textColor="@android:color/black"
		            android:layout_marginLeft="1dip"
			        android:textSize="15sp"/>
		    </RelativeLayout>
			<LinearLayout 
			    android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_marginRight="10dip"
			    android:layout_weight="1">
			    <LinearLayout 
			        android:orientation="horizontal"
			        android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:gravity="center_vertical">
			        <TextView 
			            android:id="@+id/bbscomments_head_title"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:textColor="@android:color/black"
			            android:layout_marginLeft="5dip"
				        android:textSize="15sp"/>
			        <LinearLayout 
			            android:orientation="horizontal"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="3"
			            android:gravity="right">
				        <TextView 
				            android:id="@+id/bbscomments_head_time"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textColor="#ea8100"
				            android:textSize="9sp"/>
			        </LinearLayout>	        
			    </LinearLayout>
			    <TextView 
			        android:id="@+id/bbscomments_head_content"
			        android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
		            android:textColor="@android:color/black"
		            android:textSize="16sp"
		            android:layout_marginLeft="5dip"
		            android:layout_marginTop="5dip"/>
			</LinearLayout>
	    </LinearLayout>
	    <TextView 
	        android:id="@+id/bbscomments_nums"
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/bbscomments_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dip"
	    android:layout_marginTop="3dip"
	    android:orientation="horizontal" >
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
		    android:layout_weight="3"
	        android:orientation="vertical"
			android:gravity="center">
	        <ImageView 
	            android:id="@+id/bbscomments_face"
	            android:layout_width="45dip"
	            android:layout_height="45dip"
	            android:src="@drawable/portrait_normal"/>	        
	        <TextView 
		        android:id="@+id/bbscomments_title"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:singleLine="true"
		    	android:layout_marginTop="2dip"
		        android:textColor="@android:color/black"
		        android:gravity="center"
			    android:textSize="12sp"/>
	        <TextView 
		        android:id="@+id/bbscomments_area"
		        android:layout_width="fill_parent"
		    	android:layout_height="wrap_content"
		    	android:singleLine="true"
		    	android:layout_marginTop="2dip"
		        android:textColor="@android:color/black"
		        android:gravity="center"
			    android:textSize="12sp"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
		    android:orientation="vertical"
		    android:background="@drawable/comments_bg">
	        <LinearLayout 
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:orientation="horizontal">
				<TextView 
			        android:id="@+id/bscomments_floor"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:singleLine="true"
			        android:textColor="#adadad"
			        android:gravity="right"
			        android:layout_weight="2"
				    android:textSize="13sp"/>
		    </LinearLayout>
		    <TextView 
			   	android:id="@+id/bscomments_content"
			   	android:layout_width="fill_parent"
				android:layout_height="wrap_content"
		      	android:textColor="@android:color/black"
		      	android:textSize="16sp"
		      	android:layout_marginTop="5dip"/>
		    <LinearLayout 
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:orientation="horizontal">
				<TextView 
			        android:id="@+id/bscomments_time"
			        android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:singleLine="true"
			        android:textColor="#adadad"
			        android:gravity="right"
			        android:layout_weight="2"
				    android:textSize="13sp"/>
		    </LinearLayout>
	    </LinearLayout>
    </LinearLayout>

</LinearLayout>
