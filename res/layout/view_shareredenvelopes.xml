<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip" >
    <EditText 
        android:id="@+id/view_shareredenvelopes_phone"
        android:hint="请输入对方手机号"
        android:padding="5dip"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dip"
        android:textSize="14sp"
        android:textColor="#777777"
        android:inputType="number"
    	android:layout_width="150dip"
    	android:layout_height="40dip"/>
    <ImageView 
        android:id="@+id/view_shareredenvelopes_phone_contact"
        android:layout_centerVertical="true"
        android:layout_alignRight="@id/view_shareredenvelopes_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:src="@drawable/tangou_people"/>
    <EditText 
        android:id="@+id/view_shareredenvelopes_num"
        android:background="@android:color/transparent"
        android:padding="5dip"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/view_shareredenvelopes_phone"
        android:hint="请输入派送流量值"
        android:textColor="#777777"
        android:inputType="number"
    	android:layout_width="130dip"
    	android:layout_height="40dip"/>
    <TextView 
	    android:text="M"
        android:textSize="11sp"
        android:layout_toRightOf="@id/view_shareredenvelopes_num"
        android:layout_alignBottom="@id/view_shareredenvelopes_num"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    <ImageView 
        android:id="@+id/view_shareredenvelopes_delete"
        android:src="@drawable/shareredenvelopes_delete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:padding="5dip"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    <TextView 
	    android:text="（输入框中请填写整数）"
        android:textSize="11sp"
        android:layout_toRightOf="@id/view_shareredenvelopes_phone"
        android:layout_below="@id/view_shareredenvelopes_phone"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
</RelativeLayout>
