<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/adapter_memberluck_rp_update_layout"
    android:background="#f39c12"
    android:orientation="horizontal" >
	<TextView 
	    android:id="@+id/adapter_memberluck_rp_update_level"
        android:layout_weight="1"
        android:text="会员等级"
        android:gravity="center"
        android:padding="10dip"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/adapter_memberluck_rp_update_limit"
        android:layout_weight="1"
        android:text="会员门槛"
        android:gravity="center"
        android:padding="10dip"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>
    <LinearLayout 
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:padding="10dip"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/adapter_memberluck_rp_update_benefits1"
	        android:text="会员福利"
	        android:textColor="@android:color/white"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/adapter_memberluck_rp_update_benefits2"
            android:visibility="gone"
	        android:text="会员福利"
	        android:textColor="@android:color/white"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
    </LinearLayout>
	<LinearLayout 
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/adapter_memberluck_rp_update_oper"
            android:gravity="center"
            android:background="@drawable/memberluck_red"
            android:visibility="invisible"
            android:textColor="@android:color/white"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
