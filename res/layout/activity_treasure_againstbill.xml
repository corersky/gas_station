<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/main_title"/>
    <ScrollView 
        android:fadeScrollbars="true"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
        android:background="@drawable/activity_treasure_againstbill_bg">
        <LinearLayout 
	        android:orientation="vertical"
	    	android:layout_width="match_parent"
	    	android:layout_height="match_parent">
	        <RelativeLayout 
	            android:id="@+id/treasure_againstbill_main_residue_layout"
	            android:background="@drawable/activity_treasure_againstbill_top"
	            android:layout_marginTop="5dip"
	            android:layout_marginLeft="20dip"
	            android:layout_marginRight="20dip"
	    		android:layout_width="match_parent"
	    		android:layout_height="150dip">
		        <TextView 
		            android:id="@+id/treasure_againstbill_desp_top"
		            android:text="当前话费池剩余"
		            android:layout_margin="10dip"
		            android:textColor="@android:color/black"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"/>
	            
		        <TextView 
		            android:text="元"
		            android:id="@+id/treasure_againstbill_desp_middle"
		            android:layout_marginBottom="10dip"
		            android:layout_marginTop="2dip"
		            android:layout_centerHorizontal="true"
		            android:layout_alignParentBottom="true"
		            android:textColor="@android:color/black"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/treasure_againstbill_main_residue"
		            android:text="0"
		            android:textSize="50sp"
		            android:layout_centerHorizontal="true"
		            android:layout_above="@id/treasure_againstbill_desp_middle"
		            android:textColor="@android:color/white"
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"/>
	        </RelativeLayout>
	        <LinearLayout 
	            android:orientation="horizontal"
	            android:gravity="center"
	            android:layout_marginLeft="20dip"
	            android:layout_marginRight="20dip"
	            android:layout_marginTop="20dip"
	    		android:layout_width="match_parent"
	    		android:layout_height="wrap_content">
	            <TextView 
		            android:text="可兑换金币数"
		            android:textColor="@android:color/black"
		            android:textSize="20sp"
		            android:drawableLeft="@drawable/pullrich_1"
		            android:drawablePadding="10dip"
		            android:layout_weight="1"
		    		android:layout_width="match_parent"
		    		android:layout_height="wrap_content"/>
	            <TextView 
		            android:id="@+id/treasure_againstbill_main_num"
		            android:textSize="30sp"
		            android:layout_weight="2"
			        android:textColor="#f5a61a"
		    		android:layout_width="match_parent"
		    		android:layout_height="wrap_content"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:background="@drawable/line_treasure"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	    		android:layout_width="match_parent"
	    		android:layout_height="wrap_content">
	            
	        </LinearLayout>
	        <LinearLayout 
	            android:orientation="vertical"
	            android:gravity="center"
	            android:layout_marginTop="10dip"
	            android:layout_marginLeft="20dip"
	            android:layout_marginRight="20dip"
	    		android:layout_width="match_parent"
	    		android:layout_height="wrap_content">
	            <TextView 
		            android:text="兑换数量"
		            android:textColor="@android:color/black"
		            android:textSize="20sp"
		            android:drawableLeft="@drawable/pullrich_2"
		            android:drawablePadding="10dip"
		    		android:layout_width="match_parent"
		    		android:layout_height="wrap_content"/>   
		        <EditText 
		            android:id="@+id/treasure_againstbill_num_edit"
		            android:inputType="number"
		            android:background="@drawable/activity_treasure_againstbill_edit"
		            android:layout_marginTop="10dip"
		            android:hint="请输入需要兑换的金币数量"
		            android:textSize="14sp"
		    		android:layout_width="match_parent"
		    		android:layout_height="40dip"/>    
		    		
	            <TextView 
	                android:id="@+id/treasure_againstbill_desp_bottom"
		            android:text="兑换说明：每金币兑1元话费"
					android:layout_marginTop="10dip"
		            android:textSize="12sp"
		    		android:layout_width="match_parent"
		    		android:layout_height="wrap_content"/>   
		    	<LinearLayout 
				    android:layout_below="@id/jiayou_detail_night"
			        android:orientation="horizontal"
			        android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:layout_marginTop="10dip"
			    	android:gravity="center_vertical">
				    <EditText 
			            android:id="@+id/treasure_againstbill_yz"
		            	android:layout_width="match_parent"
			    		android:layout_height="40dip"
			    		android:layout_weight="1"
	            		android:maxLength="6"
	            		android:textSize="14sp"
			    		android:hint="@string/jiayou_yz"
			    		android:background="@drawable/activity_treasure_againstbill_edit"
			    		android:inputType="number"
			    		android:paddingLeft="15dip"
			    		android:textColor="@android:color/black"/>
				    <RelativeLayout 
			            android:id="@+id/login_hqyz_layout"
			            android:layout_weight="1"
			            android:layout_width="match_parent"
			    		android:layout_height="wrap_content">
			    	    <ImageView  
				            android:id="@+id/treasure_againstbill_getyz"
			            	android:src="@drawable/zhifu_yz"
				            android:layout_weight="1"
				            android:layout_width="match_parent"
				    		android:layout_height="wrap_content"/>
			    	    <TextView 
				            android:id="@+id/treasure_againstbill_time"
				            android:textSize="14sp"
				            android:background="@drawable/zhifu_time"
				            android:visibility="gone"
				            android:gravity="center"
				            android:layout_centerInParent="true"
				            android:textColor="@android:color/darker_gray"
				            android:layout_width="wrap_content"
				    		android:layout_height="wrap_content"/>
			    	</RelativeLayout>
				</LinearLayout>	
	        </LinearLayout>
	        <TextView 
	            android:id="@+id/treasure_againstbill_submit"
	        	android:text="我要立即兑换"
	        	android:gravity="center"
	        	android:textColor="@android:color/black"
	        	android:background="#f5a61a"
				android:layout_marginLeft="20dip"
				android:layout_marginRight="20dip"
				android:layout_marginBottom="20dip"
				android:layout_marginTop="40dip"
	         	android:textSize="18sp"
	         	android:padding="15dip"
	 			android:layout_width="match_parent"
	 			android:layout_height="wrap_content"/> 
	    </LinearLayout>
    </ScrollView>
</LinearLayout>
