<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/adapter_memberluck_rp_layout"
    android:background="#f39c12"
    android:orientation="horizontal" >
    <LinearLayout 
        android:orientation="vertical"
        android:layout_weight="5"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:padding="10dip"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/adapter_memberluck_rp_name"
	        android:text="任务"
	        android:textColor="@android:color/white"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
    </LinearLayout>
	<TextView 
	    android:id="@+id/adapter_memberluck_rp_num"
        android:layout_weight="6"
        android:text="人品值"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>
	<TextView 
	    android:id="@+id/adapter_memberluck_rp_drawnum"
        android:layout_weight="6"
        android:text="抽奖机会"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/white"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>
	<LinearLayout 
        android:layout_weight="6"
        android:layout_gravity="center"
        android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/adapter_memberluck_rp_oper"
            android:background="@drawable/memberluck_red"
            android:visibility="invisible"
            android:gravity="center"
            android:textColor="@android:color/white"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
