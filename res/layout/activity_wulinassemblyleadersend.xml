<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/main_title"/>
    <LinearLayout 
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_margin="5dip"
		android:gravity="center_vertical">
        <TextView 
            android:text="成员名称："
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:layout_weight="0"/>
        <TextView
			android:id="@+id/leader_month_usual_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:padding="10dip"
			android:textSize="16sp"
			android:layout_weight="1"
			android:layout_margin="10dip"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_margin="5dip"
		android:gravity="center_vertical">
        <TextView 
            android:text="成员号码："
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:layout_weight="0"/>
        <TextView
			android:id="@+id/leader_month_usual_tel"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:padding="10dip"
			android:textSize="16sp"
			android:layout_weight="1"
			android:layout_margin="10dip"/>
        
    </LinearLayout>
	<LinearLayout 
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_margin="5dip"
		android:gravity="center_vertical">
        <TextView 
            android:text="赠送流量："
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:layout_weight="0"/>
        <EditText
			android:id="@+id/leader_month_usual_send_operate_flow"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:inputType="number"
			android:background="@drawable/double_edittext_bg"
			android:padding="10dip"
			android:textSize="16sp"
			android:layout_weight="1"
			android:hint="请输入流量数值"
			android:layout_margin="10dip"/>
        
        <TextView 
            android:text="M"
            android:layout_weight="0"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/leader_month_usual_send_operate_ok"
	    android:gravity="center"
	    android:layout_marginTop="20dip"
	    android:layout_marginLeft="30dip"
	    android:layout_marginRight="30dip"
	    android:layout_width="fill_parent" 
   	    android:layout_height="wrap_content"
   	    android:text="提           交"
   	    android:textSize="20sp"
   	    android:textColor="@android:color/white"
   	    android:background="@drawable/jiayou_wantjiayou"/>
</LinearLayout>
