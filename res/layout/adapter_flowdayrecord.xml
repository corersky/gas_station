<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView 
        android:id="@+id/flowday_right_image"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:src="@drawable/ic_launcher"/>
    <TextView 
        android:id="@+id/flow_right_title"
        android:layout_toRightOf="@id/flowday_right_image"
        android:textColor="#606060"
	    android:text="商品名称"
	    android:layout_marginTop="10dip"
	    android:layout_marginRight="5dip"
	    android:textSize="18sp"
	    android:singleLine="true"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>
    <TextView 
	    android:id="@+id/flow_time_title"
        android:layout_toRightOf="@id/flowday_right_image"
        android:layout_below="@id/flow_right_title"
	    android:textColor="#a5adb9"
	    android:text="抢购时间："
	    android:layout_marginTop="10dip"
	    android:textSize="14sp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
   
    <TextView 
	    android:id="@+id/flow_right_time"
        android:layout_toRightOf="@id/flow_time_title"
        android:layout_below="@id/flow_right_title"
	    android:textColor="#a5adb9"
	    android:layout_marginTop="10dip"
	    android:layout_marginRight="5dip"
	    android:textSize="14sp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    <TextView 
	    android:id="@+id/flow_desp_title"
        android:layout_toRightOf="@id/flowday_right_image"
        android:layout_below="@id/flow_time_title"
	    android:textColor="#a5adb9"
	    android:text="描述："
	    android:layout_marginTop="10dip"
	    android:paddingBottom="5dip"
	    android:textSize="14sp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
   
    <TextView 
	    android:id="@+id/flow_right_desp"
        android:layout_toRightOf="@id/flow_desp_title"
        android:layout_below="@id/flow_time_title"
	    android:textColor="#a5adb9"
	    android:layout_marginTop="10dip"
	    android:layout_marginRight="5dip"
	    android:paddingBottom="5dip"
	    android:textSize="14sp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
</RelativeLayout>