<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView 
        android:background="@drawable/market_notice"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center"
    	android:textColor="#715b01"
    	android:text="提示：目前游戏正在建设中，不可选哦"/>
    <RelativeLayout         
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_marginTop="80dip">
        <LinearLayout 
	        android:orientation="vertical"
	        android:gravity="center_horizontal"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
            <LinearLayout 
		        android:orientation="horizontal"
		        android:gravity="center_horizontal"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content">
		    	<LinearLayout 
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:gravity="center_horizontal"		    		
		            android:layout_marginRight="30dip"
		    		android:orientation="vertical">
		    	    <ImageView 
			            android:id="@+id/market_24_pack"
			            android:src="@drawable/market_24_pack_nor"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"/>
		    	    <TextView 
		    	        android:text="24小时流量"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"/>
		    	</LinearLayout>
		        <LinearLayout 
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:gravity="center_horizontal"
		            android:layout_marginLeft="30dip"
		    		android:orientation="vertical">
		            <ImageView 
			            android:id="@+id/market_fft"
			            android:src="@drawable/market_fft_nor"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"/>
		    	    <TextView 
		    	        android:text="费费通"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"/>
		        </LinearLayout>		        
		    </LinearLayout>		    
		    <LinearLayout 
		        android:orientation="horizontal"
		        android:gravity="center_horizontal"
		        android:layout_marginTop="15dip"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content">		        
		        <LinearLayout 
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		            android:layout_marginRight="85dip"
	    			android:gravity="center_horizontal"
		    		android:orientation="vertical">
		    	    <ImageView 
			            android:id="@+id/market_pack"
			            android:src="@drawable/market_pack_nor"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"/>
		    	    <TextView 
		    	        android:text="定向流量"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"/>
		        </LinearLayout>
		        <LinearLayout 
		    		android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		            android:layout_marginLeft="85dip"
	    			android:gravity="center_horizontal"
		    		android:orientation="vertical">
			        <ImageView 
			            android:id="@+id/market_game"
			            android:src="@drawable/market_game"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"/>
		    	    <TextView 
		    	        android:text="游戏"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"/>
		        </LinearLayout>
		    </LinearLayout>
        </LinearLayout>
        <RelativeLayout 
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="70dip">    
		    <ImageView 
		        android:id="@+id/market_choice"
		        android:src="@drawable/market_cart"
		        android:layout_centerHorizontal="true"
		        android:layout_marginTop="30dip"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>    
		    <com.linkage.gas_station.myview.DiscView 
		        android:id="@+id/market_disc"
		        android:layout_centerHorizontal="true"
		    	android:layout_width="200dip"
		    	android:layout_height="120dip"/>
	    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
