<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/main_title"/>
    <RelativeLayout         
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
        android:background="#f1f1f1">
        <LinearLayout 
            android:id="@+id/bussiness_show_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
				android:orientation="horizontal">
			    <TextView 
		            android:id="@+id/business_left_tab"
		            android:layout_marginLeft="10dip"
		            android:layout_marginRight="10dip"
		            android:layout_marginTop="5dip"
		            android:layout_marginBottom="5dip"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:padding="10dip"
		            android:textSize="16sp"
		            android:drawableLeft="@drawable/bussiness_scancode_off"
		            android:layout_width="match_parent"
		            android:layout_height="40dip"
		            android:background="@drawable/member_title_off"
		            android:textColor="@color/member_title_normal_color"
		            android:text="商家扫码"/>
		        <TextView 
		            android:id="@+id/business_right_tab"
		            android:layout_marginLeft="10dip"
		            android:layout_marginRight="10dip"
		            android:layout_marginTop="5dip"
		            android:layout_marginBottom="5dip"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:padding="10dip"
		            android:textSize="16sp"
		            android:background="@drawable/member_title_on"
		            android:textColor="@color/member_title_choice_color"
		            android:drawableLeft="@drawable/bussiness_on"
		            android:layout_width="match_parent"
		            android:layout_height="40dip"
		            android:text="商家记录"/>	 
			</LinearLayout>
			<RelativeLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent">
		        <LinearLayout 
				    android:id="@+id/right_business_layout"
		            android:orientation="vertical"
			    	android:layout_width="match_parent"
			    	android:layout_height="match_parent">
		            <LinearLayout 	            
			        	android:orientation="horizontal"
						android:layout_height="wrap_content" 
		           		android:layout_width="match_parent"	
		           		android:padding="10dip"
	           			android:background="@android:color/white"	
			            android:layout_marginLeft="10dip"
			            android:layout_marginRight="10dip"
		           		android:gravity="center">
			            <ImageView 
			                android:id="@+id/business_arrow_left"
			                android:src="@drawable/bussiness_last"
							android:layout_height="wrap_content" 
		           			android:layout_width="wrap_content"/>
			            <TextView 
			                android:id="@+id/business_month"
			                android:text="2014年05月"
			                android:layout_marginLeft="50dip"
			                android:layout_marginRight="50dip"
			                android:textColor="#124aa3"
							android:layout_height="wrap_content" 
		           			android:layout_width="wrap_content"/>
			            <ImageView 
			                android:id="@+id/business_arrow_right"
			                android:src="@drawable/bussiness_next"
							android:layout_height="wrap_content" 
		           			android:layout_width="wrap_content"/>
			        </LinearLayout>
			        <View 
			            android:background="#898989"
			            android:layout_marginLeft="10dip"
			            android:layout_marginRight="10dip"
			            android:layout_width="match_parent"
			            android:layout_height="1dip"/>
				    <com.linkage.gas_station.myview.XListView
				        android:id="@+id/right_business_listview"
	           			android:background="@android:color/white"	           		
			        	android:layout_marginLeft="10dip"       		
			        	android:layout_marginRight="10dip"
			        	android:layout_weight="1"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:fadingEdge="none"
				        android:cacheColorHint="#00000000"/>
				    <TextView 
				        android:id="@+id/right_business_total"
				        android:textSize="18sp"
				        android:gravity="right"
				        android:layout_marginRight="10dip"
				        android:layout_marginLeft="10dip"
				        android:padding="10dip"
				        android:textColor="#ff4444"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"/>
		        </LinearLayout>
			    <LinearLayout 
				    android:id="@+id/left_business_layout"
				    android:visibility="gone"
			        android:orientation="vertical"
			    	android:layout_width="match_parent"
			    	android:layout_height="match_parent">
				    <LinearLayout 
				        android:orientation="vertical"
				        android:background="@android:color/white"
				    	android:gravity="center_horizontal"
				    	android:layout_width="match_parent"
				    	android:layout_height="wrap_content"
				        android:layout_margin="10dip">
				        <LinearLayout 
				            android:orientation="horizontal"
				            android:layout_marginTop="25dip"
				            android:layout_marginLeft="25dip"
				            android:layout_marginRight="25dip"
				    		android:layout_width="match_parent"
				    		android:layout_height="wrap_content">
				            <TextView 
				                android:text="兑换物品： "
				                android:textSize="20sp"
				                android:textColor="@android:color/black"
				    			android:layout_width="wrap_content"
				    			android:layout_height="wrap_content"/>
				            <TextView 
				                android:id="@+id/business_showcode_name"
				            	android:textColor="@color/member_title_choice_color"
				                android:textSize="20sp"
				    			android:layout_width="match_parent"
				    			android:layout_height="wrap_content"/>
				        </LinearLayout>
				        <LinearLayout 
				            android:orientation="horizontal"
				            android:layout_margin="25dip"
				    		android:layout_width="match_parent"
				    		android:layout_height="wrap_content">
				            <TextView 
				                android:text="兑换号码： "
				                android:textSize="20sp"
				                android:textColor="@android:color/black"
				    			android:layout_width="wrap_content"
				    			android:layout_height="wrap_content"/>
				            <TextView 
				                android:id="@+id/business_showcode_code"
				            	android:textColor="@color/member_title_choice_color"
				                android:textSize="20sp"
				    			android:layout_width="match_parent"
				    			android:layout_height="wrap_content"/>
				        </LinearLayout>
			            
				    </LinearLayout>  
				    <TextView 
				        android:id="@+id/bussiness_commit"
				       	android:layout_gravity="center_horizontal"
		                android:background="#09b311"
		                android:text="我确认"
		                android:gravity="center"
		                android:textColor="@android:color/white"
		                android:layout_margin="15dip"
		           		android:textSize="18sp"
		       			android:layout_width="match_parent"
		       			android:layout_height="40dip"/>
				</LinearLayout>
			</RelativeLayout>
	    </LinearLayout>
    	<LinearLayout 
            android:id="@+id/bussiness_no_layout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@android:color/white"
	        android:gravity="center"
			android:orientation="horizontal">
			<ImageView 
			    android:src="@drawable/bussiness_no_pic"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
