<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
	    android:layout_marginTop="10dip"
	    android:orientation="vertical" >
        <TextView 
            android:id="@+id/adapter_bussiness_order_time"
            android:textColor="#a5adb9"
            android:textSize="14sp"
            android:text="抢购时间"
            android:layout_weight="1"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/adapter_bussiness_last_time"
            android:textColor="#a5adb9"
            android:textSize="14sp"
            android:text="有效期"
	    	android:layout_marginTop="3dip"
            android:layout_weight="1"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"/>
    </LinearLayout>
  	<TextView 
    	android:id="@+id/adapter_bussiness_name"
      	android:textColor="#a5adb9"
      	android:textSize="14sp"
	    android:layout_marginTop="3dip"
      	android:text="物品"
      	android:layout_marginLeft="10dip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
  	<LinearLayout 
  	    android:orientation="horizontal"
  	    android:layout_marginTop="5dip"
  	    android:layout_marginBottom="5dip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
  	    <TextView 
	      	android:textColor="@android:color/black"
	      	android:textSize="18sp"
		    android:layout_marginTop="7dip"
	      	android:text="兑换时间："
	      	android:layout_marginLeft="10dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
  	    <TextView 
  	        android:id="@+id/adapter_bussiness_use_time"
	      	android:textColor="#09b311"
	      	android:textSize="18sp"
		    android:layout_marginTop="7dip"
	      	android:text="2012年4月1日"
	      	android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
  	    <TextView 
  	        android:drawableRight="@drawable/movie_check"
		    android:layout_marginTop="3dip"
	      	android:textColor="#09b311"
	      	android:text="已兑换"
	      	android:gravity="center"
	      	android:layout_gravity="center_vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
  	</LinearLayout>
</LinearLayout>
