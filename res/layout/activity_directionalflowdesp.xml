<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/market_bg" >
    <include 
        layout="@layout/main_title"/>
    <TextView 
        android:id="@+id/dire_flow_desp_name"
        android:textColor="#032770"       
        android:textSize="22sp" 
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
	    android:orientation="horizontal">
	    <ImageView 
	        android:id="@+id/dire_flow_desp_image"
		    android:layout_width="60dip"
		    android:layout_height="60dip"
		    android:src="@drawable/ic_launcher"/>
        <ScrollView 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
			android:fadingEdge="none">
	        <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:orientation="vertical">
	            <TextView 
			        android:id="@+id/dire_flow_desp_content"      
        			android:layout_margin="10dip"  
        			android:textSize="17sp"
        			android:textColor="#7c818b"
			    	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"/>
	        </LinearLayout>
	    </ScrollView>
    </LinearLayout>
    
	<ImageView 
	    android:id="@+id/dire_flow_desp_wantjiayou"
	    android:src="@drawable/jiayou_wantjiayou_"
	    android:layout_gravity="center"
	    android:layout_margin="10dip"
	    android:layout_width="wrap_content" 
   	    android:layout_height="wrap_content"/>
</LinearLayout>
