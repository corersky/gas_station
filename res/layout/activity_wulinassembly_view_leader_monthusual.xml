<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="5dip"
    	android:orientation="horizontal">
        <TextView 
	        android:text="首领你好，剩余流量："
	        android:textSize="18sp"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
        <TextView 
	        android:id="@+id/leader_month_usual_lastflow"
	        android:textSize="18sp"
	        android:layout_marginLeft="5dip"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="40dip"    	
        android:background="@drawable/wuli_top"
        android:gravity="center_vertical"
    	android:orientation="horizontal">
        <TextView 
            android:text="序号"
            android:textColor="#666666"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="5dip"
            android:layout_weight="5"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"/>
        <TextView 
            android:text="成员名称"
            android:textColor="#666666"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="5dip"
            android:layout_weight="5"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"/>
        <TextView 
            android:text="当月/上月"
            android:textColor="#666666"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="5dip"
            android:layout_weight="4"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout 
   		android:layout_width="match_parent"
   		android:layout_height="wrap_content">
		<LinearLayout 
		    android:id="@+id/leader_month_usual_tool_layout"
		    android:layout_alignParentBottom="true"
		    android:orientation="horizontal"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
		    <TextView 
			    android:id="@+id/leader_month_usual_get"
			    android:background="@drawable/wulin_sel"
   	    		android:gravity="center"
   	    		android:textSize="20sp"
	    		android:layout_margin="20dip"
			    android:text="领取流量"
			    android:textColor="#a1a1a1"
			    android:layout_weight="1"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
			<TextView 
			    android:id="@+id/leader_month_usual_add"
			    android:background="@drawable/wulin_sel"
		   	    android:gravity="center"
		   	    android:textSize="20sp"
			    android:layout_margin="20dip"
			    android:text="新增成员"
			    android:textColor="#a1a1a1"
			    android:layout_weight="1"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
		</LinearLayout>
        <ListView 
	        android:id="@+id/leader_month_usual_list"        
		    android:layout_above="@id/leader_month_usual_tool_layout"      
		    android:divider="@android:color/darker_gray"
		    android:fadingEdge="none"
		    android:dividerHeight="1px"
		    android:listSelector="#00000000"
	   	    android:layout_weight="1"
	    	android:layout_width="match_parent"
	    	android:layout_height="match_parent">
	        
	    </ListView>
    </RelativeLayout>
    

</LinearLayout>
