<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >    
    <LinearLayout
	    android:layout_width="70dip"
	    android:layout_marginTop="5dip"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="horizontal" >		    
		<ImageView 
		    android:id="@+id/adapter_right_image"
		    android:src="@drawable/ic_launcher"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
	</LinearLayout>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="2"
		    android:orientation="vertical" >		    
			<TextView 
			    android:id="@+id/adapter_right_name"
			    android:textColor="#606060"
			    android:text="商品名称"
			    android:layout_marginTop="5dip"
			    android:textSize="16sp"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
			<LinearLayout 
			    android:id="@+id/adapter_right_red"
			    android:layout_marginTop="5dip"
	        	android:orientation="horizontal"
	        	android:gravity="center_vertical"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content">

		        <TextView 
		            android:id="@+id/adapter_right_redenvelope_state"
		            android:text="已结束"
		            android:textColor="#a5adb9"
			    	android:textSize="14sp"
		            android:gravity="center"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/adapter_right_redenvelope_lastnum"
		            android:text="0/5"
		            android:gravity="center"
		            android:layout_weight="1"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"/>

			</LinearLayout>    
			<TextView 
			    android:id="@+id/adapter_right_time"
			    android:textColor="#a5adb9"
			    android:text="抢购时间"
			    android:singleLine="true"
			    android:layout_marginTop="5dip"
			    android:textSize="14sp"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
			<TextView 
			    android:id="@+id/adapter_right_lasttime"
			    android:layout_marginTop="5dip"
			    android:text="有效期"
                android:textColor="#a5adb9"
			    android:singleLine="true"
			    android:textSize="14sp"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
			<TextView 
			    android:id="@+id/adapter_right_address"
			    android:textColor="#a5adb9"
			    android:layout_marginTop="5dip"
			    android:layout_marginBottom="5dip"
			    android:textSize="14sp"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="6"
		    android:orientation="vertical" >	
		    <RelativeLayout 		        
			    android:layout_gravity="center_horizontal"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content">
		        <TextView 
				    android:id="@+id/adapter_right_statue_exchange_comp"
				    android:layout_marginTop="10dip"
				    android:layout_marginLeft="10dip"
				    android:visibility="gone"
				    android:drawableRight="@drawable/movie_check"
				    android:text="已兑换"
	                android:textColor="#09b311"
				    android:singleLine="true"
				    android:textSize="14sp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"/>
		        <TextView 
				    android:id="@+id/adapter_right_statue_exchange_now"
				    android:layout_marginTop="10dip"
				    android:layout_marginLeft="10dip"
				    android:visibility="gone"
				    android:text="未兑换"
	                android:textColor="#a5adb9"
				    android:singleLine="true"
				    android:textSize="14sp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"/>
		        <TextView 
				    android:id="@+id/adapter_right_statue_exchange_overdue"
				    android:layout_marginTop="10dip"
				    android:layout_marginLeft="10dip"
				    android:text="过期"
	                android:textColor="@android:color/black"
				    android:singleLine="true"
				    android:textSize="14sp"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"/>
		        <ImageView 
		            android:id="@+id/adapter_right_redenvelope_send"
		            android:visibility="gone"
		            android:src="@drawable/redenvelope_share"
				    android:layout_marginTop="10dip"
				    android:layout_marginLeft="10dip"
	        		android:layout_width="wrap_content"
	        		android:layout_height="wrap_content"/>
		    </RelativeLayout>	    	
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
