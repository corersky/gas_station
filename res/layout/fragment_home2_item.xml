<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
        <TextView
	        android:id="@+id/item2_title"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:textColor="@color/home2_item_title"
	    	android:layout_marginLeft="10dip"
        	android:layout_marginRight="10dip"
	    	android:textSize="14sp"/>
        <RelativeLayout 
            android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
            <ProgressBar 
			    android:id="@+id/item2_pb"
		        style="@style/myProgress"
		        android:layout_width="fill_parent"
		        android:layout_height="15dip"	
		        android:layout_centerVertical="true"
		        android:layout_marginTop="5dip"        
	        	android:layout_marginLeft="10dip"
	        	android:layout_marginRight="10dip"
	        	android:layout_marginBottom="5dip"   
		        android:max="100"/>
            <ProgressBar 
			    android:id="@+id/item2_pb_"
		        style="@style/myProgress_"
		        android:visibility="gone"
		        android:layout_width="fill_parent"
		        android:layout_height="15dip"	
		        android:layout_centerVertical="true"
		        android:layout_marginTop="5dip"        
	        	android:layout_marginLeft="10dip"
	        	android:layout_marginRight="10dip"
	        	android:layout_marginBottom="5dip" 
		        android:max="100"/>
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content">           
            <TextView 
                android:id="@+id/item2_pb_used"
                android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="20dip"
		        android:textSize="12sp"/>
            <TextView 
                android:id="@+id/item2_pb_unused"
                android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:layout_marginRight="20dip"
		        android:textSize="12sp"/>
        </RelativeLayout>
		
		<ImageView 
		    android:id="@+id/detail_bg_first_line"
		    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_margin="3dip"
		    android:src="@drawable/detail_bg_first_line"/>
    </LinearLayout>
    
</LinearLayout>