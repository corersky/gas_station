<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <RelativeLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginLeft="15dip">
        <ImageView 
            android:layout_centerInParent="true"
            android:src="@drawable/view_shareredenvelopesrecordchild_line"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
        <ImageView 
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:src="@drawable/view_shareredenvelopesrecordchild_point"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
	    android:orientation="vertical" >
	    <TextView 
            android:id="@+id/view_shareredenvelopesrecordchild_time"
            android:text="2014-1-1 1:1:1"
        	android:layout_marginTop="3dip"
        	android:textSize="12sp"
            android:textColor="#777777"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
        	android:layout_marginTop="5dip"
		    android:orientation="horizontal" >
		    <TextView 
	            android:id="@+id/view_shareredenvelopesrecordchild_name"
	            android:text="小伙伴"
	            android:layout_weight="1"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
			<TextView 
	            android:id="@+id/view_shareredenvelopesrecordchild_type"
	            android:text="随机领取"
	            android:layout_weight="1"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
			<TextView 
	            android:id="@+id/view_shareredenvelopesrecordchild_num"
	            android:text="10M"
	            android:layout_weight="1"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
