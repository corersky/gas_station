<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#da181a" >
    <include 
        layout="@layout/main_title"/>
    <RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">
    	<ImageView 
    	    android:background="@drawable/shareredenvelopes_luckdraw_top_bg"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
    	<LinearLayout 
    	    android:orientation="horizontal"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
    	    <TextView 
    	        android:text="您今天还有"
    	        android:textSize="16sp"
    	        android:layout_marginTop="10dip"
    	        android:layout_marginLeft="20dip"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
    	    <TextView 
    	        android:id="@+id/shareredenvelopes_lottery_drawnum"
    	        android:text="0"
    	        android:textSize="25sp"
    	        android:textColor="#da181a"
    	        android:layout_marginLeft="10dip"
    	        android:layout_marginRight="10dip"
    	        android:layout_marginTop="10dip"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
    	    <TextView 
    	        android:text="次抽奖机会"
    	        android:textSize="16sp"
    	        android:layout_marginTop="10dip"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
    	    <TextView 
    	        android:id="@+id/shareredenvelopes_lottery_lists"
    	        android:text="查看抽奖记录"
    	        android:padding="5dip"
    	        android:layout_marginLeft="10dip"
    	        android:layout_marginTop="10dip"
    	        android:textColor="@android:color/white"
    	        android:gravity="center"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
    	        android:background="@drawable/shareredenvelopes_bottom_bg"/>
    	</LinearLayout>
        <RelativeLayout 
	    	android:layout_height="280dip" 
	       	android:layout_width="280dip"
	       	android:layout_centerInParent="true">
	       	<ImageView 
	           	android:id="@+id/shareredenvelopes_lottery_view"
	           	android:src="@drawable/shareredenvelopes_lottery_view"
	           	android:layout_height="wrap_content" 
	           	android:layout_width="wrap_content" 
	           	android:layout_centerInParent="true" /> 
	       	<ImageView 
	           	android:id="@+id/shareredenvelopes_lottery_point"
	       	    android:src="@drawable/memberluck_point"
	           	android:layout_height="wrap_content" 
	           	android:layout_width="wrap_content"
	           	android:layout_centerInParent="true" />
	    </RelativeLayout>
		<ImageView 
		    android:background="@drawable/shareredenvelopes_luckdraw_buttom_bg"
		    android:layout_alignParentBottom="true"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
    </RelativeLayout>
    
</LinearLayout>
