<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"      
        android:layout_margin="5dip" 
        android:background="@drawable/bg_first_more"
        android:gravity="center">
        <ImageView 
            android:id="@+id/gonglve_title_1_pic"
            android:src="@drawable/gonglve_title_1_default"
            android:layout_margin="10dip"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
        <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:layout_marginBottom="10dip"
	        android:layout_marginRight="10dip">
            <TextView 
                android:id="@+id/gonglve_title_1_name"
                android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_margin="2dip"
	        	android:textSize="18sp"/>
            <TextView 
                android:id="@+id/gonglve_title_1_date"
                android:layout_below="@id/gonglve_title_1_name"
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_alignParentRight="true"
	        	android:textSize="14sp"
	        	android:layout_marginTop="10dip"
	        	android:textColor="@android:color/darker_gray"/>
            <ImageView 
                android:layout_marginTop="8dip"
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:id="@+id/gonglve_title_1_go"
	        	android:layout_below="@id/gonglve_title_1_name"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>