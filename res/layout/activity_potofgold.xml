<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="100dip" >
    <include 
	        layout="@layout/main_title"/>
    <ImageView 
        android:id="@+id/potofgold_cash_image"
        android:src="@drawable/potofgold_cash_normal"
        android:layout_marginTop="60dip"
    	android:layout_width="216dip"
    	android:layout_height="46dip"/>
    <ImageView 
        android:id="@+id/potofgold_money_image"
        android:src="@drawable/potofgold_money_normal"
        android:layout_marginTop="50dip"
    	android:layout_width="216dip"
    	android:layout_height="46dip"/>
    <ImageView 
        android:id="@+id/potofgold_flow_image"
        android:src="@drawable/potofgold_flow_normal"
        android:layout_marginTop="50dip"
    	android:layout_width="216dip"
    	android:layout_height="46dip"/>

</LinearLayout>
