<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/warninfobank_bg"
    android:orientation="vertical" >        
    <include 
    	layout="@layout/main_title"/>
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginTop="100dip"
		    android:orientation="vertical" >
	        <TextView 
		        android:text="流量银行说明："
		        android:layout_marginLeft="20dip"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:textSize="22sp"
		    	android:textColor="#013e11"
		    	android:textStyle="bold"/>
	        <ImageView 
		        android:background="@drawable/warninfobank_line"
		        android:layout_margin="5dip"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
		    <TextView 
		        android:id="@+id/warninfobank"
		        android:textSize="16sp"
		        android:textColor="#148431"
		        android:layout_margin="10dip"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
	    </LinearLayout>
	    <ImageView 
	        android:background="@drawable/warninfobank_top"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"/>
    </RelativeLayout>
    
</LinearLayout>
