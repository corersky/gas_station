<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/activity_treasure_againstbill_bg" >
    <include 
        layout="@layout/main_title"/>
    <TextView 
        android:text="预览图"
        android:textColor="#3d2a07"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
	<LinearLayout 
	    android:background="@drawable/activity_treasure_pullrich_detail_bg"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:layout_margin="10dip">
	    <ImageView 
	        android:src="@drawable/ic_launcher"
	        android:layout_margin="10dip"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
	    <LinearLayout 
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	    	android:gravity="center_vertical">
	        
		    <TextView 
		        android:id="@+id/treasure_send_title"
		        android:text="来自星星的店"
		        android:textColor="#a56e10"
		        android:layout_margin="3dip"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"/>
		    <TextView 
		        android:id="@+id/treasure_send_message"
		        android:text="买流量送金币！100元以上的流量包，线下请喝奶茶"
		        android:textColor="#a56e10"
		        android:layout_margin="3dip"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"/>
	    </LinearLayout>
	</LinearLayout>
	<TextView 
        android:text="选择分享渠道"
        android:textColor="#3d2a07"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
	<LinearLayout 
	    android:background="@drawable/activity_treasure_pullrich_detail_bg"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
    	android:orientation="vertical"
    	android:layout_margin="10dip">
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_margin="10dip"
		    android:gravity="center_vertical"
		    android:orientation="horizontal" >
			<ImageView 
		        android:id="@+id/qqkj_logo_share"
		   	 	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1"
		        android:src="@drawable/qqkj_logo"/>
			<ImageView 
		        android:id="@+id/weixin_pengyou_share"
		   	 	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1"
		        android:src="@drawable/weixin_pengyou_logo"/>
			<ImageView 
		        android:id="@+id/yixin_pengyou_share"
		   	 	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1"
		        android:src="@drawable/yixin_pengyou_logo"/>
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_margin="10dip"
		    android:gravity="center_vertical"
		    android:orientation="horizontal" >
		    <ImageView 
		        android:id="@+id/sinaweibo_logo_share"
		   	 	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1"
		        android:src="@drawable/sinaweibo_logo"/>
			<ImageView 
		   	 	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1"
		        android:src="@drawable/empty_logo"/>
			<ImageView 
		   	 	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_weight="1"
		        android:src="@drawable/empty_logo"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
