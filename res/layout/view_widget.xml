<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dip"
    android:background="@drawable/fragment1_bgl"
    android:orientation="vertical" >
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
        android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip">
	    <ImageView 
	        android:id="@+id/widget_clock"
	        android:src="@drawable/clock"
	        android:layout_centerVertical="true"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>        
        <ImageView 
    	    android:id="@+id/widget_refresh"
    	    android:src="@drawable/refresh"
    	    android:layout_centerVertical="true"
    	    android:layout_alignParentRight="true"
	    	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>        
        <ProgressBar 
          	android:id="@+id/widget_refresh_progress"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_centerVertical="true"
    	    android:layout_alignParentRight="true"
    	    android:visibility="gone"
          	android:indeterminateDrawable="@drawable/progress_refresh"/>
        <TextView 
	        android:id="@+id/widget_refresh_time"
	        android:layout_toLeftOf="@id/widget_refresh"
	        android:layout_toRightOf="@id/widget_clock"
	        android:layout_centerVertical="true"
	        android:textColor="@android:color/black"
	        android:textSize="13sp"
	        android:layout_marginLeft="5dip"
	        android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView 
        android:background="@android:color/black"
        android:layout_marginTop="4dip"      
        android:layout_marginBottom="10dip"  
    	android:layout_width="match_parent"
   		android:layout_height="1dip"/>
    <LinearLayout 
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_margin="3dip">
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
    		android:layout_height="150dip">
    		<ImageView 
    		    android:layout_centerInParent="true"
    		    android:id="@+id/widget_cylinder_1"
	        	android:src="@drawable/cylinder_00"		        	
	        	android:layout_width="wrap_content"
    			android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/amount_desp_1"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:layout_marginTop="10dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_amount"/>
	        <TextView 
	            android:id="@+id/widget_amount_text_1"
	            android:layout_below="@id/amount_desp_1"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:layout_marginTop="5dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_start"/>
	        <TextView 
	            android:id="@+id/widget_unused_text_1"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:paddingBottom="15dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_start"/>
	        <TextView 
	            android:id="@+id/unused_desp_1"
	            android:layout_above="@id/widget_unused_text_1"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:layout_marginBottom="5dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_unused"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
    		android:layout_height="150dip">
    		<ImageView 
    		    android:layout_centerInParent="true"
    		    android:id="@+id/widget_cylinder_e_1"
	        	android:src="@drawable/cylinder_small_00"
	        	android:layout_width="wrap_content"
    			android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/amount_desp_e_1"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:layout_marginTop="10dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_amount"/>
	        <TextView 
	            android:id="@+id/widget_amount_text_e_1"
	            android:layout_below="@id/amount_desp_e_1"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:layout_marginTop="5dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_start"/>
	        <TextView 
	            android:id="@+id/widget_unused_text_e_1"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:paddingBottom="15dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_start"/>
	        <TextView 
	            android:id="@+id/unused_desp_e_1"
	            android:layout_above="@id/widget_unused_text_e_1"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:layout_marginBottom="5dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_unused"/>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="fill_parent"
    		android:layout_height="150dip"
    		android:layout_weight="1">
	        <ImageView 
    		    android:layout_centerInParent="true"
    		    android:id="@+id/widget_cylinder_e_2"
	        	android:src="@drawable/cylinder_small_00"
	        	android:layout_width="wrap_content"
    			android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/amount_desp_e_2"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:layout_marginTop="10dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_amount"/>
	        <TextView 
	            android:id="@+id/widget_amount_text_e_2"
	            android:layout_below="@id/amount_desp_e_2"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:layout_marginTop="5dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_start"/>
	        <TextView 
	            android:id="@+id/widget_unused_text_e_2"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:paddingBottom="15dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_start"/>
	        <TextView 
	            android:id="@+id/unused_desp_e_2"
	            android:layout_above="@id/widget_unused_text_e_2"
	            android:layout_centerHorizontal="true"
	            android:textColor="@android:color/black"
	            android:textSize="11sp"
	            android:layout_marginBottom="5dip"
	            android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
	            android:text="@string/home_unused"/>
	    </RelativeLayout>
	</LinearLayout>
	<LinearLayout 
        android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="horizontal">
        <TextView 
            android:id="@+id/widget_desp_1"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_margin="5dip"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
   			android:layout_height="wrap_content"
            android:text="标准流量"/>
	    <TextView 
	        android:id="@+id/widget_desp_2"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_margin="5dip"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
   			android:layout_height="wrap_content"
            android:text="夜间专用流量"/>
	    <TextView 
	        android:id="@+id/widget_desp_3"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_margin="5dip"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
   			android:layout_height="wrap_content"
            android:text="长期有效流量"/>
	</LinearLayout>
</LinearLayout>
