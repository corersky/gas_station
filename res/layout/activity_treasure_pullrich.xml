<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/activity_treasure_againstbill_bg" >
    <include 
        layout="@layout/main_title"/>
    <ScrollView 
        android:scrollbars="none"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
        <LinearLayout 
            android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent">
            <LinearLayout 
		        android:orientation="vertical"
		        android:gravity="center"
		        android:layout_marginTop="10dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
		        <TextView 
		        	android:text="店铺名称"
		         	android:textColor="@android:color/black"
		         	android:textSize="20sp"
		         	android:drawableLeft="@drawable/pullrich_2"
		         	android:drawablePadding="10dip"
		 			android:layout_width="match_parent"
		 			android:layout_height="wrap_content"/>   
		     	<EditText 
		     	    android:id="@+id/pull_rich_title"
		         	android:background="@drawable/activity_treasure_againstbill_edit"
		         	android:layout_marginTop="10dip"
		         	android:hint="来自星星的店"
		 			android:layout_width="match_parent"
		 			android:layout_height="wrap_content"/>       
		    </LinearLayout>
		
		    <LinearLayout 
		        android:background="@drawable/line_treasure"
		        android:layout_marginLeft="10dip"
		        android:layout_marginRight="10dip"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
		        
		    </LinearLayout>
		    <LinearLayout 
		        android:orientation="vertical"
		        android:gravity="center"
		        android:layout_marginTop="10dip"
		        android:layout_marginLeft="20dip"
		        android:layout_marginRight="20dip"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
		        <TextView 
		        	android:text="宣传语"
		         	android:textColor="@android:color/black"
		         	android:textSize="20sp"
		         	android:drawableLeft="@drawable/pullrich_2"
		         	android:drawablePadding="10dip"
		 			android:layout_width="match_parent"
		 			android:layout_height="wrap_content"/>   
		     	<EditText 
		     	    android:id="@+id/pull_rich_message"
		         	android:background="@drawable/activity_treasure_againstbill_edit"
		         	android:layout_marginTop="10dip"
		         	android:maxLines="6"
		         	android:hint="买流量送金币！100元以上的流量包，线下请喝奶茶"
		 			android:layout_width="match_parent"
		 			android:layout_height="wrap_content"/>   
				<TextView 
		          	android:text="分享链接至微信、易信、QQ等好友圈拉土豪，店铺成交的每笔交易的10%作为利润收益，购买者也将得到10%的金币收益。\n说明：\n1、好友若购买流量加餐包（仅当月有效）将立即派发金币；\n2、好友若购买长期流量包（长期有效）从次月1日开始若好友未退订该包每月可由双方至聚油宝自行领取(需当月领完)。"
					android:layout_marginTop="10dip"
			        android:textSize="14sp"
			  		android:layout_width="match_parent"
			  		android:layout_height="wrap_content"/>    
		    </LinearLayout>
		    <LinearLayout 
		        android:background="@drawable/line_treasure"
		        android:layout_marginLeft="10dip"
		        android:layout_marginRight="10dip"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
		        
		    </LinearLayout>
		    <TextView 
		        android:id="@+id/pull_rich_commit"
		       	android:text="拉土豪去"
		       	android:gravity="center"
		       	android:textColor="@android:color/black"
		       	android:background="#f5a61a"
				android:layout_marginLeft="20dip"
				android:layout_marginRight="20dip"
				android:layout_marginBottom="20dip"
				android:layout_marginTop="10dip"
		       	android:textSize="18sp"
		       	android:padding="15dip"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
