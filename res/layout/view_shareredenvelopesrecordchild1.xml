<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <RelativeLayout 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginLeft="15dip">
        <ImageView 
            android:layout_centerInParent="true"
            android:src="@drawable/view_shareredenvelopesrecordchild_line"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
        <ImageView 
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:src="@drawable/view_shareredenvelopesrecordchild_point"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
       	android:layout_marginTop="5dip"
       	android:layout_marginLeft="15dip"
	    android:orientation="horizontal" >
	    <TextView 
            android:id="@+id/view_shareredenvelopesrecordchild1_name"
            android:text="小伙伴"
            android:layout_weight="3"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"/>
		<TextView 
            android:id="@+id/view_shareredenvelopesrecordchild1_num"
            android:text="10M"
            android:layout_weight="5"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>
