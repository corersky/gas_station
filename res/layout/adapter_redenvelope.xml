<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/adapter_redenvelope_state_image"
        android:src="@drawable/redenvelope_wallet_2"
        android:padding="15dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
	<LinearLayout 
	    android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <LinearLayout 
	        android:id="@+id/adapter_redenvelope_layout"
	        android:orientation="vertical"
	        android:layout_weight="3"
	        android:gravity="center_vertical"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content">
	        <TextView 
	            android:id="@+id/adapter_redenvelope_name"
	            android:text="100M流量包"
	            android:textSize="15sp"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/adapter_redenvelope_time"
	            android:text="2013/11/11 09:12"
	            android:textColor="#777777"
	            android:textSize="10sp"
	            android:layout_marginTop="2dip"
	            android:paddingBottom="3dip"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:orientation="horizontal"
	        android:layout_weight="4"
	        android:gravity="center_vertical"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content">
	        <TextView 
	            android:id="@+id/adapter_redenvelope_state"
	            android:text="已结束"
	            android:textSize="10sp"
	            android:gravity="center"
	            android:layout_weight="1"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/adapter_redenvelope_lastnum"
	            android:text="0/5"
	            android:gravity="center"
	            android:layout_weight="1"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>
	        <ImageView 
	            android:id="@+id/adapter_redenvelope_send"
	            android:layout_weight="1"
	            android:paddingTop="10dip"
	            android:paddingBottom="10dip"
	            android:src="@drawable/redenvelope_share"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
