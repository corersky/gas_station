<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView 
        android:id="@+id/flowday_left_image"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:src="@drawable/ic_launcher"/>
    <LinearLayout
        android:id="@+id/flowday_lastnum_layout"
		android:layout_marginTop="10dip"
		android:layout_alignParentRight="true"
		android:layout_marginRight="10dip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
        <TextView 
	        android:id="@+id/flowday_left_last"
	        android:textColor="#f23f00"
	    	android:textSize="20sp"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        android:text="0"/>	
	    <TextView 
            android:textColor="#a5adb9"
            android:layout_marginLeft="3dip"
		    android:textSize="12sp"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        android:text="份"/>    
    </LinearLayout>
    <TextView 
        android:id="@+id/flow_left_title"
        android:layout_toRightOf="@id/flowday_left_image"
        android:layout_toLeftOf="@id/flowday_lastnum_layout"
        android:textColor="#606060"
	    android:text="商品名称"
	    android:layout_marginTop="10dip"
	    android:layout_marginRight="5dip"
	    android:textSize="18sp"
	    android:singleLine="true"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"/>
    <TextView 
	    android:id="@+id/flow_desp_title"
        android:layout_toRightOf="@id/flowday_left_image"
        android:layout_below="@id/flow_left_title"
	    android:textColor="#a5adb9"
	    android:text="描述："
	    android:layout_marginTop="10dip"
	    android:textSize="14sp"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    <TextView 
        android:id="@+id/flowday_left_order"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_below="@id/flow_left_title"
	    android:layout_marginTop="10dip"
        android:textColor="@android:color/white"
        android:text="抢"
        android:textSize="15sp"
    	android:layout_width="50dip"
    	android:gravity="center"
    	android:layout_height="30dip"
        android:background="#4fc1e9"/>
    <TextView 
	    android:id="@+id/flow_left_desp"
        android:layout_toRightOf="@id/flow_desp_title"
        android:layout_toLeftOf="@id/flowday_left_order"
        android:layout_below="@id/flow_left_title"
	    android:textColor="#a5adb9"
	    android:layout_marginTop="10dip"
	    android:layout_marginRight="5dip"
	    android:textSize="14sp"
	    android:paddingBottom="5dip"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
</RelativeLayout>