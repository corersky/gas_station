<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:gravity="center_vertical"
    	android:layout_height="50dip"
        android:background="#d42707">
        
   		<ImageView 
   		    android:id="@+id/share_lottery_back"
   		    android:src="@drawable/share_lottery_back"
   		    android:padding="5dip"
   		    android:layout_margin="5dip"
           	android:layout_height="wrap_content"
   			android:layout_width="wrap_content"/>
        <LinearLayout 
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content"
    		android:layout_width="match_parent">
            <TextView 
                android:id="@+id/share_lottery_my"
                android:text="我的抽奖"
                android:background="@drawable/share_lottery_menu_selected"
                android:textColor="#f3f2c2"
                android:textSize="18sp"
                android:paddingTop="5dip"
                android:gravity="center"
                android:paddingBottom="5dip"
            	android:layout_height="40dip"
    			android:layout_width="90dip"/>
            <LinearLayout 
		        android:layout_width="1dip"
		        android:layout_height="match_parent"
		        android:background="#970203">
		        
		    </LinearLayout>
            <TextView 
                android:id="@+id/share_lottery_notice"
                android:text="中奖公示"
                android:textColor="#f3f2c2"
                android:textSize="18sp"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center"
            	android:layout_height="40dip"
    			android:layout_width="90dip"/>
            <LinearLayout 
		        android:layout_width="1dip"
		        android:layout_height="match_parent"
		        android:background="#970203">
		        
		    </LinearLayout>
            <TextView 
                android:id="@+id/share_lottery_detail"
                android:text="活动明细"
                android:textColor="#f3f2c2"
                android:textSize="18sp"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center"
            	android:layout_height="40dip"
    			android:layout_width="90dip"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#970203">
        
    </LinearLayout>
    <RelativeLayout 
        android:layout_height="fill_parent" 
        android:layout_width="fill_parent">
        <ScrollView 
	        android:id="@+id/share_lottery_my_layout"
	        android:scrollbars="none"
	        android:layout_height="fill_parent" 
	        android:layout_width="fill_parent" >
	        <LinearLayout 
	            android:id="@+id/share_lottery_first_bg"
		        android:layout_height="fill_parent" 
		        android:layout_width="fill_parent" 
		        android:gravity="center_horizontal"
		        android:orientation="vertical"> 
		        <FrameLayout 
		            android:layout_marginTop="60dip"
		            android:layout_height="300dip" 
		            android:layout_width="fill_parent" 
		            android:id="@+id/Lottery">
		            <ImageView 
		                android:id="@+id/lottery_view"
		                android:layout_height="wrap_content" 
		                android:layout_width="wrap_content" 
		                android:layout_gravity="center" /> 
		         </FrameLayout>
		         <LinearLayout 
		             android:layout_margin="10dip"
		             android:orientation="horizontal"
		             android:layout_height="wrap_content" 
		             android:layout_width="wrap_content" >
		             <TextView 
		             	android:text="本月总可抽奖 "
		             	android:textSize="14sp"
		             	android:textColor="@android:color/black"
						android:layout_height="wrap_content" 
		             	android:layout_width="wrap_content"/>
		             <TextView 
		                 android:id="@+id/luck_draw_total_num"
		             	android:text="0"
		             	android:textColor="#ffff4444"
		             	android:textSize="22sp"
						android:layout_height="wrap_content" 
		             	android:layout_width="wrap_content"/>
		             <TextView 
		             	android:text=" 次，剩余 "
		             	android:textSize="14sp"
		             	android:textColor="@android:color/black"
						android:layout_height="wrap_content" 
		             	android:layout_width="wrap_content"/>
		             <TextView 
		                 android:id="@+id/luck_draw_last_num"
		             	android:text="0"
		             	android:textColor="#ffff4444"
		             	android:textSize="22sp"
						android:layout_height="wrap_content" 
		             	android:layout_width="wrap_content"/>
		             <TextView 
		             	android:text=" 次，当月有效"
		             	android:textSize="14sp"
		             	android:textColor="@android:color/black"
						android:layout_height="wrap_content" 
		             	android:layout_width="wrap_content"/>
		         </LinearLayout>
		         <Button 
		             android:layout_marginLeft="30dip"
		             android:layout_marginRight="30dip"
		             android:layout_height="wrap_content" 
		             android:layout_width="fill_parent" 
		             android:background="@drawable/share_lottery_commit"
		             android:id="@+id/begin_btn" 
	           		 android:textSize="18sp"
	           		 android:padding="10dip"
		             android:textColor="@android:color/white"
		             android:text="开始抽奖"/>
		         <LinearLayout 
		             android:id="@+id/share_lottery_buy"
		         		android:orientation="vertical"
		         		android:layout_marginLeft="10dip"
		         		android:layout_marginRight="10dip"
		         		android:layout_marginTop="20dip"
						android:layout_height="wrap_content" 
	             		android:layout_width="match_parent">
		             <TextView 
		                android:id="@+id/luckdraw_desp"
		             	android:text="购买10元以上流量包可增加一次抽奖机会"
		             	android:textSize="14sp"
		             	android:textColor="#510000"
						android:layout_height="wrap_content" 
		             	android:layout_width="match_parent"/>		             
				    <TextView 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginRight="10dip"
				        android:gravity="right"
				        android:text="立即购买>>"
				        android:textSize="18sp"
				        android:textColor="#be0f07"/>
		         </LinearLayout>
			</LinearLayout>
	    </ScrollView> 
	    <LinearLayout 
	        android:id="@+id/share_lottery_notice_layout"
	        android:orientation="vertical"
	        android:visibility="gone"
			android:layout_height="match_parent" 
           	android:layout_width="match_parent">
	        <LinearLayout 	            
	        	android:orientation="horizontal"
				android:layout_height="wrap_content" 
           		android:layout_width="match_parent"
           		android:padding="10dip"
           		android:gravity="center"
        		android:background="#d42707">
	            <ImageView 
	                android:id="@+id/share_lottery_arrow_left"
	                android:src="@drawable/share_lottery_arrow_left"
					android:layout_height="wrap_content" 
           			android:layout_width="wrap_content"/>
	            <TextView 
	                android:id="@+id/share_lottery_month"
	                android:text="2014年04月"
	                android:layout_marginLeft="50dip"
	                android:layout_marginRight="50dip"
	                android:textColor="@android:color/white"
					android:layout_height="wrap_content" 
           			android:layout_width="wrap_content"/>
	            <ImageView 
	                android:id="@+id/share_lottery_arrow_right"
	                android:src="@drawable/share_lottery_arrow_right"
					android:layout_height="wrap_content" 
           			android:layout_width="wrap_content"/>
	        </LinearLayout>
	        <ListView 
	            android:id="@+id/share_lottery_notice_whole_list"
		    	android:divider="@android:color/transparent"
		    	android:fadingEdge="none"
		    	android:cacheColorHint="#00000000"
		    	android:listSelector="@android:color/transparent"
				android:layout_height="@dimen/draw_luck_whole_height" 
        		android:layout_width="match_parent">
	            
	        </ListView>
	        <LinearLayout 
	            android:background="@android:color/black"
	            android:layout_marginTop="3dip"
	            android:layout_width="fill_parent"
	            android:layout_height="1dip">
	            
	        </LinearLayout>
	        <RelativeLayout 
				android:layout_height="wrap_content" 
        		android:layout_width="match_parent" >
	            <TextView 
		            android:layout_margin="10dip"
		            android:text="我的抽奖"
		            android:textColor="#be0f07"
		            android:drawablePadding="5dip"
		            android:textSize="18sp"
		            android:drawableLeft="@drawable/share_lottery_notice_my_logo"
					android:layout_height="wrap_content" 
	        		android:layout_width="wrap_content"/>
	            <TextView 
	                android:id="@+id/share_lottery_notice_my_address"
		            android:layout_margin="10dip"
		            android:text="中奖地址"
		            android:layout_alignParentRight="true"
		            android:textColor="#be0f07"
		            android:drawablePadding="5dip"
		            android:textSize="18sp"
		            android:drawableLeft="@drawable/share_lottery_notice_my_logo"
					android:layout_height="wrap_content" 
	        		android:layout_width="wrap_content"/>
	        </RelativeLayout>
	        <RelativeLayout 	            
				android:layout_height="match_parent" 
        		android:layout_width="match_parent">
	            <LinearLayout 
                    android:id="@+id/share_lottery_notice_my_list_no"
	                android:orientation="vertical"
					android:layout_height="match_parent" 
        			android:layout_width="match_parent"
        			android:gravity="center">
	                <ImageView 
	                    android:src="@drawable/share_lottery_myno"
						android:layout_height="wrap_content" 
        				android:layout_width="wrap_content"/>
	                <TextView 
	                    android:text="没有抽奖记录，还要努力哦"
	                    android:layout_marginTop="10dip"
	                    android:textColor="@android:color/black"
						android:layout_height="wrap_content" 
        				android:layout_width="wrap_content"/>
	            </LinearLayout>
		        <ListView 
		            android:id="@+id/share_lottery_notice_my_list"
		            android:visibility="gone"
		    		android:cacheColorHint="#00000000"
			    	android:divider="@android:color/transparent"
			    	android:fadingEdge="none"
			    	android:listSelector="@android:color/transparent"
					android:layout_height="match_parent" 
	        		android:layout_width="match_parent">
		            
		        </ListView>
	        </RelativeLayout>
	    </LinearLayout>
	    <LinearLayout
	        android:visibility="gone"
	        android:orientation="horizontal"
	        android:id="@+id/share_lottery_detail_layout"
			android:layout_height="match_parent" 
       		android:layout_width="match_parent">
	        <TextView 
	            android:id="@+id/share_lottery_desp"
	            android:textSize="18sp"
	            android:textColor="@android:color/black"
	            android:layout_margin="20dip"
				android:layout_height="match_parent" 
       			android:layout_width="match_parent"/>
	    </LinearLayout>
    </RelativeLayout>
    
</LinearLayout>
