<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dip"
	    android:layout_marginBottom="5dip"
	    android:layout_marginLeft="7dip"
	    android:layout_marginRight="7dip"
	    android:background="@android:color/white" >
        <TextView 
            android:id="@+id/view_shareredenvelopesrecordparent_label"
            android:text="派发流量"
            android:textColor="#777777"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"/>
       	<TextView 
            android:id="@+id/view_shareredenvelopesrecordparent_total"
            android:layout_alignBaseline="@id/view_shareredenvelopesrecordparent_label"
            android:layout_toRightOf="@id/view_shareredenvelopesrecordparent_label"
            android:textColor="#da181a"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:text="0"
            android:layout_marginLeft="3dip"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/view_shareredenvelopesrecordparent_m"
            android:layout_toRightOf="@id/view_shareredenvelopesrecordparent_total"
            android:layout_centerVertical="true"
            android:text="M"
            android:layout_marginLeft="3dip"
            android:textSize="18sp"
            android:textColor="#777777"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"/>
        
        <LinearLayout 
            android:orientation="horizontal"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_centerVertical="true"
  			android:layout_alignParentRight="true">
            <TextView 
	            android:id="@+id/view_shareredenvelopesrecordparent_sharedirec"
	            android:text="直接分享"
	            android:textSize="13sp"
	            android:background="#da181a"
	            android:padding="3dip"
	            android:layout_marginRight="15dip"
	            android:textColor="@android:color/white"
	  			android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"/>
            <TextView 
	            android:id="@+id/view_shareredenvelopesrecordparent_sharerandom"
	            android:text="随机分享"
	            android:textSize="13sp"
	            android:textColor="@android:color/white"
	            android:background="#da181a"
	            android:padding="3dip"
	  			android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"/>
	        
        </LinearLayout>
	</RelativeLayout>
	<LinearLayout 
	    android:id="@+id/view_shareredenvelopesrecordparent_childlist"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="7dip"
	    android:layout_marginRight="7dip"
	    android:orientation="vertical">
	    
	</LinearLayout>
</LinearLayout>
