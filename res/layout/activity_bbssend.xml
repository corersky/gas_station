<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/main_title"/>
    <LinearLayout 
        android:id="@+id/bbs_send_title_layout"
        android:orientation="horizontal"
        android:layout_margin="5dip"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <TextView 
            android:text="标题："
            android:textSize="18sp"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
        <EditText 
	        android:id="@+id/bbs_send_title"
	        android:layout_margin="5dip"
	        android:padding="5dip"
	       	android:background="@drawable/list_blockbg_normal"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_margin="5dip"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <TextView 
            android:text="内容："
            android:textSize="18sp"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
        <RelativeLayout 
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content">
            <EditText 
		        android:id="@+id/bbs_send_content"
		        android:lines="5"
		        android:gravity="top"
		        android:padding="5dip"
		        android:background="@drawable/list_blockbg_normal"
		        android:layout_margin="5dip"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"/>
            <TextView 
                android:id="@+id/hasnum"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		        android:layout_margin="5dip"
		        android:padding="10dip"
		        android:textColor="@android:color/darker_gray"
		    	android:layout_alignBottom="@id/bbs_send_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>        
    </LinearLayout>
    
</LinearLayout>
