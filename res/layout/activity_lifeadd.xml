<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <include 
        layout="@layout/main_title"/>
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#f2f3f4"
    	android:orientation="horizontal" >
        <ImageView 
            android:src="@drawable/life_add_phone"
            android:layout_margin="10dip"
   			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/life_add_phone"
            android:textColor="#6d6d6d"
            android:textSize="18sp"
            android:layout_marginTop="10dip"
   			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView 
        android:background="#c9c8c9"
		android:layout_width="match_parent"
		android:layout_height="1dip"/>
    <LinearLayout 
        android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"      
        android:layout_marginTop="20dip"
        android:gravity="center_vertical">
        <LinearLayout 
	        android:layout_weight="1"
	        android:background="@drawable/life_add_bg_blue"
	        android:orientation="horizontal"
	        android:layout_marginLeft="10dip"
	        android:gravity="center_vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
	        <TextView 
	            android:text="绑定账号"
	            android:textSize="18sp"
	            android:padding="5dip"
	            android:textColor="#72b5ff"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	        <EditText 
	            android:id="@+id/life_add_num"
	            android:background="@null"
	            android:textSize="18sp"
	            android:padding="5dip"
	            android:hint="请输入绑定账号"
	            android:inputType="number"
	            android:textColor="#72b5ff"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
	    </LinearLayout>
	    <RelativeLayout
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginRight="10dip"
	        android:layout_marginLeft="10dip"
	    	android:background="@drawable/life_add_bg_gray">
		   	<ImageView 
	        	android:id="@+id/life_add_type"
		        android:src="@drawable/life_add_ele"	
		        android:padding="5dip"  
		        android:layout_centerInParent="true"    
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</RelativeLayout>
	    
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"      
        android:layout_marginTop="20dip"
        android:gravity="center_vertical">
        <LinearLayout 
            android:layout_weight="1"
	        android:background="@drawable/life_add_left_bg"
	        android:orientation="horizontal"
	        android:layout_marginLeft="10dip"
	        android:gravity="center_vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
	        <TextView 
	            android:text="地区"
	            android:textSize="18sp"
	            android:padding="5dip"
	            android:textColor="#72b5ff"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	        <TextView 
	            android:id="@+id/life_add_area"
	            android:background="@null"
	            android:textSize="18sp"
	            android:padding="5dip"
	            android:layout_marginLeft="10dip"
	            android:textColor="#72b5ff"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	    </LinearLayout>
	    <RelativeLayout
	        android:id="@+id/life_add_choice_area"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginRight="10dip"
	        android:padding="5dip"
	    	android:background="@drawable/life_add_right_bg">
		    <ImageView 
		        android:src="@drawable/life_add_select"	  
	    		android:padding="14dip"
		        android:layout_centerInParent="true"      
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
		</RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:background="@drawable/life_add_bg_blue"
        android:orientation="horizontal"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dip"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
        <TextView 
            android:text="公司"
            android:textSize="18sp"
            android:padding="5dip"
            android:textColor="#72b5ff"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/life_add_comp"
            android:background="@null"
            android:textSize="18sp"
            android:padding="5dip"
            android:layout_marginLeft="10dip"
            android:textColor="#72b5ff"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
    </LinearLayout>
	<TextView 
        android:background="#c9c8c9"
        android:layout_marginTop="20dip"
		android:layout_width="match_parent"
		android:layout_height="1dip"/>
	<TextView 
        android:id="@+id/life_add_submit"
        android:background="@drawable/fft_add_buton_bg"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:textColor="@android:color/white"
        android:text="添    加"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingTop="8dip"
        android:paddingBottom="8dip"
   		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
</LinearLayout>
