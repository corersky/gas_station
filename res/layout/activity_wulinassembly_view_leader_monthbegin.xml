<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >
    <TextView 
        android:background="@android:color/white"
        android:text="首领你好："
        android:textSize="18sp"
        android:padding="5dip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="40dip"    	
        android:background="@drawable/wuli_top"
        android:gravity="center_vertical"
    	android:orientation="horizontal">
        <TextView 
            android:text="序号"
            android:textColor="#666666"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="5dip"
            android:layout_weight="5"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"/>
        <TextView 
            android:text="成员名称"
            android:textColor="#666666"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="5dip"
            android:layout_weight="5"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"/>
        <TextView 
            android:text="当月/上月"
            android:textColor="#666666"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="5dip"
            android:layout_weight="4"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"/>
    </LinearLayout>
    
	<RelativeLayout         
   		android:layout_width="match_parent"
   		android:layout_height="match_parent"
    	android:background="#f5f5f5">        
    	
		<TextView 
		    android:id="@+id/leader_month_begin_commit"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/sheik_monthbegin_allow"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
		<ListView 
	        android:id="@+id/leader_month_begin_list"  
	        android:layout_above="@id/leader_month_begin_commit"      
		    android:divider="@android:color/darker_gray"
		    android:fadingEdge="none"
		    android:dividerHeight="1px"
		    android:listSelector="#00000000"
	   	    android:layout_weight="1"
	    	android:layout_width="match_parent"
	    	android:layout_height="match_parent">
	        
	    </ListView>
    </RelativeLayout>
</LinearLayout>
